{
  "name": "bloxmania-shopify-theme",
  "version": "1.0.0",
  "description": "BloxMania - Digital Goods Marketplace Shopify Theme",
  "main": "index.js",
  "scripts": {
    "---------------------------------------------Development": "---------------------------------------------",
    "dev": "npm run build:css:dev && dotenv -e .env -- shopify theme dev --path=theme",
    "dev:concurrent": "concurrently \"npm run build:css:watch\" \"dotenv -e .env -- shopify theme dev --path=theme\"",
    "dev:watch": "npm run build:css:watch",
    "---------------------------------------------Build & Deploy": "---------------------------------------------",
    "build": "npm run build:css:prod && dotenv -e .env -- shopify theme push --path=theme",
    "build:css:dev": "tailwindcss -i ./theme/src/styles.css -o ./theme/assets/style-base.css --config ./tailwind.config.js",
    "build:css:watch": "tailwindcss -i ./theme/src/styles.css -o ./theme/assets/style-base.css --config ./tailwind.config.js --watch",
    "build:css:prod": "NODE_ENV=production tailwindcss -i ./theme/src/styles.css -o ./theme/assets/style-base.css --config ./tailwind.config.js --minify",
    "push": "npm run build:css:prod && dotenv -e .env -- shopify theme push --path=theme",
    "pull": "dotenv -e .env -- shopify theme pull --path=theme",
    "package": "npm run build:css:prod && dotenv -e .env -- shopify theme package --path=theme",
    "---------------------------------------------Theme Management": "---------------------------------------------",
    "init": "dotenv -e .env -- shopify theme init --path=theme",
    "list": "dotenv -e .env -- shopify theme list --path=theme",
    "info": "dotenv -e .env -- shopify theme info --path=theme",
    "publish": "dotenv -e .env -- shopify theme publish --path=theme",
    "share": "dotenv -e .env -- shopify theme share --path=theme",
    "open": "dotenv -e .env -- shopify theme open --path=theme",
    "rename": "dotenv -e .env -- shopify theme rename --path=theme",
    "delete": "dotenv -e .env -- shopify theme delete --path=theme",
    "console": "dotenv -e .env -- shopify theme console --path=theme",
    "profile": "dotenv -e .env -- shopify theme profile --path=theme",
    "---------------------------------------------Quality Assurance": "---------------------------------------------",
    "check": "dotenv -e .env -- shopify theme check --path=theme",
    "check:fix": "dotenv -e .env -- shopify theme check --auto-correct --path=theme",
    "test": "dotenv -e .env -- shopify theme check --output=json --path=theme > theme-check-report.json",
    "lint": "dotenv -e .env -- shopify theme check --path=theme",
    "---------------------------------------------Performance & Optimization": "---------------------------------------------",
    "performance:test": "npm run build:css:prod && npm run optimize:css && echo 'CSS performance optimization completed. Check theme/css-optimization-report.json for details.'",
    "critical:extract": "node -e \"const opt = require('./theme/build/css-bundle-optimizer.js'); new opt().extractCriticalCSS().then(() => console.log('Critical CSS extracted successfully'));\"",
    "---------------------------------------------Documentation": "---------------------------------------------",
    "docs:generate": "node ./theme/build/liquid-doc-generator.js",
    "docs:serve": "cd theme/docs && python -m http.server 8080 || python3 -m http.server 8080",
    "---------------------------------------------Setup & Maintenance": "---------------------------------------------",
    "clean": "rm -rf node_modules package-lock.json",
    "setup": "npm install",
    "env:setup": "cp theme/shopify.env.example .env && echo 'Created .env file from example. Please edit .env with your store settings.'"
  },
  "keywords": [
    "shopify",
    "theme",
    "ecommerce",
    "gaming",
    "digital-goods",
    "roblox",
    "fortnite"
  ],
  "author": "BloxMania Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/bloxmania-shopify-theme.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/bloxmania-shopify-theme/issues"
  },
  "homepage": "https://github.com/your-username/bloxmania-shopify-theme#readme",
  "devDependencies": {
    "@shopify/cli": "^3.82.1",
    "@shopify/theme": "^3.58.2",
    "autoprefixer": "^10.4.0",
    "chokidar": "^3.5.0",
    "concurrently": "^8.2.0",
    "cssnano": "^6.0.0",
    "dotenv-cli": "^8.0.0",
    "fs-extra": "^11.0.0",
    "glob": "^11.0.3",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.0",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "shopify": {
    "theme": {
      "name": "BloxMania Theme",
      "version": "1.0.0",
      "description": "Digital goods marketplace theme for gaming items"
    }
  },
  "config": {
    "shopify": {
      "store": "tnqzbi-xv.myshopify.com",
      "theme_id": "auto"
    }
  }
}