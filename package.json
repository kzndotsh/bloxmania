{
  "name": "bloxmania-shopify-theme",
  "version": "1.0.0",
  "description": "BloxMania - Digital Goods Marketplace Shopify Theme",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build:dev && shopify theme dev --path=theme",
    "dev:concurrent": "concurrently \"npm run build:watch\" \"shopify theme dev --path=theme\"",
    "dev:watch": "npm run build:watch",
    "build": "node build.js --mode=production",
    "build:dev": "node build.js --mode=development",
    "build:watch": "nodemon --watch dev/css --watch dev/js --watch dev/images --watch dev/sections --watch dev/snippets --watch dev/templates --ext js,css,liquid --exec \"npm run build:dev\"",
    "build:css:dev": "tailwindcss -i ./dev/css/styles.css -o ./build/css/main.css --config ./tailwind.config.js",
    "build:css:watch": "tailwindcss -i ./dev/css/styles.css -o ./build/css/main.css --config ./tailwind.config.js --watch",
    "build:css:prod": "NODE_ENV=production tailwindcss -i ./dev/css/styles.css -o ./build/css/main.css --config ./tailwind.config.js --minify",
    "build:js:dev": "node ./dev/utils/bundler.js --mode=development",
    "build:js:watch": "node ./dev/utils/bundler.js --mode=development --watch",
    "build:js:prod": "node ./dev/utils/bundler.js --mode=production",
    "push": "npm run build && shopify theme push --path=theme",
    "pull": "shopify theme pull --path=theme",
    "package": "npm run build && shopify theme package --path=theme",
    "init": "shopify theme init --path=theme",
    "list": "shopify theme list --path=theme",
    "info": "shopify theme info --path=theme",
    "publish": "shopify theme publish --path=theme",
    "share": "shopify theme share --path=theme",
    "open": "shopify theme open --path=theme",
    "rename": "shopify theme rename --path=theme",
    "delete": "shopify theme delete --path=theme",
    "console": "shopify theme console --path=theme",
    "profile": "shopify theme profile --path=theme",
    "check": "shopify theme check --path=theme",
    "check:fix": "shopify theme check --auto-correct --path=theme",
    "test": "shopify theme check --output=json --path=theme > theme-check-report.json",
    "lint": "shopify theme check --path=theme",
    "format": "prettier --write \"dev/**/*.{liquid,html,css,js,json}\"",
    "format:check": "prettier --check \"dev/**/*.{liquid,html,css,js,json}\"",
    "format:fix": "prettier --write \"dev/**/*.{liquid,html,css,js,json}\"",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:css:cache": "stylelint \"**/*.css\" --cache",
    "lint:css:report": "stylelint \"**/*.css\" --output-file stylelint-report.txt",
    "lint:css:verbose": "stylelint \"**/*.css\" --formatter verbose",
    "lint:css:json": "stylelint \"**/*.css\" --formatter json --output-file stylelint-report.json",
    "lint:css:dev": "stylelint \"dev/**/*.css\"",
    "lint:css:theme": "stylelint \"theme/**/*.css\"",
    "lint:css:performance": "TIMING=10 stylelint \"**/*.css\"",
    "clean": "rm -rf node_modules package-lock.json build theme",
    "clean:build": "rm -rf build",
    "clean:theme": "rm -rf theme",
    "setup": "npm install",
    "env:setup": "cp dev/shopify.env.example .env && echo 'Created .env file from example. Please edit .env with your store settings.'",
    "css:critical": "node ./dev/utils/css-optimizer.js extract-critical",
    "css:optimize": "node ./dev/utils/css-optimizer.js optimize",
    "css:manifest": "node ./dev/utils/css-optimizer.js manifest",
    "css:analyze": "npm run css:critical && npm run css:optimize && npm run css:manifest && echo 'ðŸ“Š CSS analysis complete. Check build/css/ for files and build/css-optimization-report.json for details.'",
    "docs:generate": "node ./dev/utils/liquid-doc-generator.js",
    "docs:serve": "cd docs && python -m http.server 8080 || python3 -m http.server 8080",
    "logs": "tail -f ~/.shopify/logs/theme.log",
    "status": "echo 'ðŸ“Š Build Status:' && echo '  Source: dev/' && echo '  Build: build/' && echo '  Theme: theme/' && echo '  Mode: ' && node -e \"console.log(process.env.NODE_ENV || 'development')\""
  },
  "keywords": [
    "shopify",
    "theme",
    "ecommerce",
    "gaming",
    "digital-goods",
    "roblox",
    "fortnite"
  ],
  "author": "BloxMania Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/bloxmania-shopify-theme.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/bloxmania-shopify-theme/issues"
  },
  "homepage": "https://github.com/your-username/bloxmania-shopify-theme#readme",
  "devDependencies": {
    "@shopify/cli": "^3.82.1",
    "@shopify/prettier-plugin-liquid": "^1.9.3",
    "@shopify/theme": "^3.58.2",
    "autoprefixer": "^10.4.0",
    "chokidar": "^3.5.0",
    "concurrently": "^8.2.0",
    "cssnano": "^6.0.0",
    "fs-extra": "^11.0.0",
    "glob": "^11.0.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.6.2",
    "sharp": "^0.33.5",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^38.0.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.28.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "shopify": {
    "theme": {
      "name": "BloxMania Theme",
      "version": "1.0.0",
      "description": "Digital goods marketplace theme for gaming items"
    }
  },
  "config": {
    "shopify": {
      "store": "tnqzbi-xv.myshopify.com",
      "theme_id": "auto"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "chrome >= 90",
    "firefox >= 88",
    "safari >= 14",
    "edge >= 90",
    "ios >= 14",
    "android >= 10",
    "not ie 11",
    "not ie 10",
    "not ie 9",
    "not ie 8",
    "not op_mini all"
  ]
}