{% comment %}
  Generic Page Template
  This template handles all pages in the theme
{% endcomment %}

{{ 'main.css' | asset_url | stylesheet_tag }}

<script src="{{ 'main.js' | asset_url }}" defer="defer"></script>

<div class="bg-slate-900 text-white min-h-screen">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-4xl lg:text-5xl font-bold text-white mb-4">
        {{ page.title | escape }}
      </h1>

      {% if page.description %}
        <p class="text-xl text-gray-300 max-w-3xl">
          {{ page.description | escape }}
        </p>
      {% endif %}
    </div>

    <!-- Page Content -->
    <div class="prose prose-invert prose-lg max-w-none">
      {% if page.content != blank %}
        {{ page.content }}
      {% endif %}
    </div>

    <!-- Custom Page Sections -->
    {% case page.handle %}
      {% when 'guarantee' %}
        {% section 'main-guarantee' %}
      {% else %}
        <!-- Default page content -->
        {% if page.content == blank %}
          <div class="text-center py-12">
            <h2 class="text-2xl font-semibold text-gray-300 mb-4">Page content coming soon</h2>
            <p class="text-gray-400">This page is under construction. Please check back later.</p>
          </div>
        {% endif %}
    {% endcase %}
  </div>
</div>

<style>
  /* Page-specific styles */
  .prose {
    color: #e2e8f0;
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: #ffffff;
  }

  .prose a {
    color: #ffd800;
    text-decoration: none;
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose strong {
    color: #ffffff;
  }

  .prose blockquote {
    border-left-color: #ffd800;
    color: #cbd5e1;
  }

  .prose ul li::marker {
    color: #ffd800;
  }

  .prose ol li::marker {
    color: #ffd800;
  }
</style>
