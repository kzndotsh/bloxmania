{% comment %}
  Tutorial Page Template
  This template handles the tutorial page with video content
{% endcomment %}

{{ 'main.css' | asset_url | stylesheet_tag }}

<script src="{{ 'main.js' | asset_url }}" defer="defer"></script>

<div class="tutorial-page-wrapper bg-slate-900 text-white page-content gaming-bg">
  <div class="container mx-auto">
    <!-- Page Title -->
    <div class="tutorial-title-section">
      <h1 class="tutorial-title">
        <span class="title-glow">PURCHASE</span>
        <span class="title-accent">TUTORIAL</span>
      </h1>
      <div class="title-subtitle">Learn how to get your items â€” smooth and safely!</div>
    </div>

    <!-- Tutorial Video Section -->
    <div class="tutorial-video-section">
      <div class="video-container">
        <div class="video-player-frame">
          <div class="video-player-border">
            <div class="video-player-glow"></div>
            <video
              class="tutorial-video"
              controls
              preload="metadata"
            >
              <source
                src="https://cdn.shopify.com/videos/c/o/v/adf333779cd947ce963557ea17c3db0a.mp4"
                type="video/mp4"
                {% comment %}Note: Using external video URL, not asset_url since this is a Shopify CDN video{% endcomment %}
              >
              <p class="text-body text-gray-400 text-center py-8">
                Your browser doesn't support HTML5 video.
                <a
                  href="https://cdn.shopify.com/videos/c/o/v/adf333779cd947ce963557ea17c3db0a.mp4"
                  class="text-yellow-400 hover:underline"
                >
                  Download the video
                </a>
                to watch it.
              </p>
            </video>
          </div>
        </div>
      </div>
    </div>

    <!-- Page Content -->
    <div class="prose prose-invert max-w-none text-body">
      {% if page.content != blank %}
        {{ page.content }}
      {% endif %}
    </div>
  </div>
</div>

<style>
  /* Override body background and remove header padding for tutorial page */
  body.template-page {
    background: #0f172a !important;
    padding-top: 0 !important;
  }

  /* Create full-screen background using body pseudo-elements */
  body.template-page::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%),
      radial-gradient(circle at 20% 80%, rgba(255, 216, 0, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 216, 0, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 40% 40%, rgba(255, 216, 0, 0.05) 0%, transparent 50%);
    z-index: -2;
    pointer-events: none;
  }

  /* Gaming grid background effect */
  body.template-page::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: linear-gradient(90deg, rgba(255, 216, 0, 0.03) 1px, transparent 1px),
      linear-gradient(rgba(255, 216, 0, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
    z-index: -1;
    pointer-events: none;
  }

  /* Tutorial page wrapper - centered content accounting for header */
  .tutorial-page-wrapper {
    min-height: calc(100vh - 120px);
    margin-top: 120px;
    padding: 0;
    position: relative;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Add dot pattern overlay */
  .tutorial-page-wrapper::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 25% 25%, rgba(255, 216, 0, 0.1) 0%, transparent 8px),
      radial-gradient(circle at 75% 75%, rgba(255, 216, 0, 0.1) 0%, transparent 8px),
      radial-gradient(circle at 50% 10%, rgba(255, 216, 0, 0.08) 0%, transparent 6px),
      radial-gradient(circle at 10% 50%, rgba(255, 216, 0, 0.08) 0%, transparent 6px);
    pointer-events: none;
    z-index: -1;
  }

  /* Content container */
  .tutorial-page-wrapper .container {
    position: relative;
    z-index: 1;
    padding: 2rem 1rem;
    max-width: 1200px;
    width: 100%;
  }

  /* Tutorial page specific styles */
  .tutorial-title-section {
    text-align: center;
    padding: 0 0 2rem 0;
    margin: 0;
  }

  .tutorial-title {
    font-size: 3.5rem;
    font-weight: 900;
    line-height: 1;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .title-glow {
    color: #ffffff;
    text-shadow: 0 0 5px rgba(255, 216, 0, 0.4);
  }

  .title-accent {
    color: #ffd800;
    text-shadow: 0 0 8px rgba(255, 216, 0, 0.5);
  }

  .title-subtitle {
    font-size: 1.25rem;
    color: #cbd5e1;
    font-weight: 600;
    margin: 0;
    opacity: 0.9;
  }

  .tutorial-video-section {
    padding: 0 0 2rem 0;
    margin: 0;
  }

  .video-container {
    position: relative;
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
  }

  .video-player-frame {
    position: relative;
    padding: 20px;
    background: linear-gradient(135deg, #1e293b 0%, #334155 50%, #1e293b 100%);
    border-radius: 20px;
    box-shadow: 0 0 0 1px rgba(255, 216, 0, 0.3), 0 0 20px rgba(255, 216, 0, 0.2), 0 0 40px rgba(255, 216, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .video-player-border {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: #0f172a;
    box-shadow: 0 0 0 2px rgba(255, 216, 0, 0.5), 0 8px 32px rgba(0, 0, 0, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .video-player-glow {
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(
      45deg,
      rgba(255, 216, 0, 0.8) 0%,
      rgba(255, 216, 0, 0.4) 25%,
      rgba(255, 216, 0, 0.1) 50%,
      rgba(255, 216, 0, 0.4) 75%,
      rgba(255, 216, 0, 0.8) 100%
    );
    border-radius: 14px;
    z-index: -1;
    animation: glowPulse 3s ease-in-out infinite alternate;
  }

  .tutorial-video {
    width: 100%;
    height: auto;
    display: block;
    background-color: #0f172a;
    border-radius: 10px;
  }

  /* Glow animation */
  @keyframes glowPulse {
    0% {
      opacity: 0.6;
      transform: scale(1);
    }
    100% {
      opacity: 1;
      transform: scale(1.02);
    }
  }

  /* Gaming-style corner accents */
  .video-player-frame::before,
  .video-player-frame::after {
    content: '';
    position: absolute;
    width: 30px;
    height: 30px;
    border: 2px solid #ffd800;
    border-radius: 4px;
  }

  .video-player-frame::before {
    top: 10px;
    left: 10px;
    border-right: none;
    border-bottom: none;
  }

  .video-player-frame::after {
    bottom: 10px;
    right: 10px;
    border-left: none;
    border-top: none;
  }

  /* Responsive video sizing */
  @media (max-width: 768px) {
    .tutorial-title-section {
      padding: 0 0 1.5rem 0;
    }

    .tutorial-title {
      font-size: 2.5rem;
    }

    .title-subtitle {
      font-size: 1.1rem;
    }

    .video-container {
      max-width: 100%;
      margin: 0;
    }

    .video-player-frame {
      padding: 15px;
      border-radius: 15px;
    }

    .video-player-frame::before,
    .video-player-frame::after {
      width: 20px;
      height: 20px;
    }

    .tutorial-page-wrapper {
      min-height: 100vh;
      margin-top: 0;
    }

    .tutorial-page-wrapper .container {
      padding: 1rem;
    }
  }

  /* Page content styles */
  .prose {
    color: #e2e8f0;
    margin-top: 2rem;
    padding-bottom: 2rem;
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: #ffffff;
  }

  .prose a {
    color: #ffd800;
    text-decoration: none;
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose strong {
    color: #ffffff;
  }

  .prose blockquote {
    border-left-color: #ffd800;
    color: #cbd5e1;
  }

  .prose ul li::marker {
    color: #ffd800;
  }

  .prose ol li::marker {
    color: #ffd800;
  }
</style>
