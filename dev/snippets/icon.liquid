{% comment %}
  Renders an icon using Font Awesome with consistent styling and accessibility features.

  Accepts:
  - icon: {String} Icon name (required)
  - size: {String} Icon size. Values are "small", "medium", "large", "xlarge". Default: "medium" (optional)
  - color: {String} Icon color. Values are "primary", "secondary", "white", "gray", "current". Default: "current" (optional)
  - class: {String} Additional CSS classes to apply (optional)
  - alt: {String} Alternative text for accessibility (optional)
  - aria_hidden: {Boolean} Hide from screen readers. Default: true (optional)

  Usage examples:
    {% render 'icon', icon: 'arrow', size: 'small' %}
    {% render 'icon', icon: 'cart', color: 'primary', alt: 'Shopping cart' %}
{% endcomment %}

{%- liquid
  assign size = size | default: 'medium'
  assign color = color | default: 'current'
  assign aria_hidden = aria_hidden | default: true

  case size
    when 'small'
      assign size_class = 'fa-xs'
    when 'large'
      assign size_class = 'fa-lg'
    when 'xlarge'
      assign size_class = 'fa-2x'
    else
      assign size_class = 'fa-sm'
  endcase

  case color
    when 'primary'
      assign color_class = 'text-primary'
    when 'secondary'
      assign color_class = 'text-secondary'
    when 'white'
      assign color_class = 'text-white'
    when 'gray'
      assign color_class = 'text-gray-400'
    else
      assign color_class = 'text-current'
  endcase

  assign fa_class = ''
  case icon
    when 'arrow'
      assign fa_class = 'fa-solid fa-arrow-right'
    when 'cart'
      assign fa_class = 'fa-solid fa-cart-shopping'
    when 'plus'
      assign fa_class = 'fa-solid fa-plus'
    when 'minus'
      assign fa_class = 'fa-solid fa-minus'
    when 'close'
      assign fa_class = 'fa-solid fa-xmark'
    when 'search'
      assign fa_class = 'fa-solid fa-magnifying-glass'
    when 'heart'
      assign fa_class = 'fa-solid fa-heart'
    when 'star'
      assign fa_class = 'fa-solid fa-star'
    when 'star-outline'
      assign fa_class = 'fa-regular fa-star'
    when 'check'
      assign fa_class = 'fa-solid fa-check'
    when 'times'
      assign fa_class = 'fa-solid fa-times'
    when 'shield'
      assign fa_class = 'fa-solid fa-shield-halved'
    when 'zap'
      assign fa_class = 'fa-solid fa-bolt'
    when 'tag'
      assign fa_class = 'fa-solid fa-tag'
    when 'message-circle'
      assign fa_class = 'fa-solid fa-comment-dots'
    when 'menu'
      assign fa_class = 'fa-solid fa-bars'
    when 'bars'
      assign fa_class = 'fa-solid fa-bars'
    when 'shopping-bag'
      assign fa_class = 'fa-solid fa-shopping-bag'
    when 'user'
      assign fa_class = 'fa-solid fa-user'
    when 'eye'
      assign fa_class = 'fa-solid fa-eye'
    when 'share'
      assign fa_class = 'fa-solid fa-share'
    when 'discord'
      assign fa_class = 'fa-brands fa-discord'
    when 'youtube'
      assign fa_class = 'fa-brands fa-youtube'
    when 'tiktok'
      assign fa_class = 'fa-brands fa-tiktok'
    when 'bag'
      assign fa_class = 'fa-solid fa-bag-shopping'
    when 'caret-left'
      assign fa_class = 'fa-solid fa-caret-left'
    when 'caret-right'
      assign fa_class = 'fa-solid fa-caret-right'
    when 'chevron-left'
      assign fa_class = 'fa-solid fa-chevron-left'
    when 'chevron-right'
      assign fa_class = 'fa-solid fa-chevron-right'
    when 'home'
      assign fa_class = 'fa-solid fa-house'
    when 'chevron-down'
      assign fa_class = 'fa-solid fa-chevron-down'
    when 'clipboard'
      assign fa_class = 'fa-regular fa-clipboard'
    when 'link'
      assign fa_class = 'fa-solid fa-link'
    when 'twitter'
      assign fa_class = 'fa-brands fa-twitter'
    when 'facebook'
      assign fa_class = 'fa-brands fa-facebook-f'
    when 'instagram'
      assign fa_class = 'fa-brands fa-instagram'
    when 'pinterest'
      assign fa_class = 'fa-brands fa-pinterest'
    when 'whatsapp'
      assign fa_class = 'fa-brands fa-whatsapp'
    when 'arrow-right'
      assign fa_class = 'fa-solid fa-arrow-right'
    when 'info'
      assign fa_class = 'fa-solid fa-info-circle'
    when 'success'
      assign fa_class = 'fa-solid fa-check-circle'
    when 'file-lines'
      assign fa_class = 'fa-solid fa-file-lines'
    when 'spinner'
      assign fa_class = 'fa-solid fa-spinner'
    when 'exclamation'
      assign fa_class = 'fa-solid fa-exclamation-triangle'
    when 'question'
      assign fa_class = 'fa-solid fa-question-circle'
    when 'play'
      assign fa_class = 'fa-solid fa-play'
    when 'pause'
      assign fa_class = 'fa-solid fa-pause'
    when 'volume'
      assign fa_class = 'fa-solid fa-volume-high'
    when 'mute'
      assign fa_class = 'fa-solid fa-volume-mute'
    when 'fullscreen'
      assign fa_class = 'fa-solid fa-expand'
    when 'compress'
      assign fa_class = 'fa-solid fa-compress'
    when 'download'
      assign fa_class = 'fa-solid fa-download'
    when 'upload'
      assign fa_class = 'fa-solid fa-upload'
    when 'edit'
      assign fa_class = 'fa-solid fa-edit'
    when 'delete'
      assign fa_class = 'fa-solid fa-trash'
    when 'save'
      assign fa_class = 'fa-solid fa-save'
    when 'refresh'
      assign fa_class = 'fa-solid fa-sync'
    when 'settings'
      assign fa_class = 'fa-solid fa-cog'
    when 'filter'
      assign fa_class = 'fa-solid fa-filter'
    when 'sort'
      assign fa_class = 'fa-solid fa-sort'
    when 'grid'
      assign fa_class = 'fa-solid fa-th'
    when 'list'
      assign fa_class = 'fa-solid fa-list'
    when 'image'
      assign fa_class = 'fa-solid fa-image'
    when 'video'
      assign fa_class = 'fa-solid fa-video'
    when 'file'
      assign fa_class = 'fa-solid fa-file'
    when 'folder'
      assign fa_class = 'fa-solid fa-folder'
    when 'lock'
      assign fa_class = 'fa-solid fa-lock'
    when 'unlock'
      assign fa_class = 'fa-solid fa-unlock'
    when 'key'
      assign fa_class = 'fa-solid fa-key'
    when 'gift'
      assign fa_class = 'fa-solid fa-gift'
    when 'truck'
      assign fa_class = 'fa-solid fa-truck'
    when 'credit-card'
      assign fa_class = 'fa-solid fa-credit-card'
    when 'clock'
      assign fa_class = 'fa-solid fa-clock'
    else
      assign fa_class = 'fa-solid fa-circle-question'
  endcase

  assign custom_classes = ''
  if class
    assign custom_classes = class
  endif

  assign icon_classes = fa_class | append: ' ' | append: size_class | append: ' ' | append: color_class | append: ' ' | append: custom_classes
-%}

<i
  class="{{ icon_classes | strip }}"
  {% if aria_hidden %}
    aria-hidden="true"
  {% endif -%}
  {% if alt %}
    role="img" aria-label="{{ alt | escape }}"
  {% endif %}
></i>
