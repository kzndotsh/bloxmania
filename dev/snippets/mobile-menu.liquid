{% comment %}
  Clean Mobile Menu Snippet
  Matches the design shown in the reference image
{% endcomment %}

<div id="mobile-menu" class="mobile-menu" role="dialog" aria-modal="true" aria-hidden="true">
  <!-- Header Section -->
  <div class="mobile-menu__header">
    <!-- Logo -->
    <a href="{{ routes.root_url }}" class="mobile-menu__logo">
      <span class="mobile-menu__logo-text">BM</span>
      <div class="mobile-menu__logo-icon">üê∏</div>
    </a>

    <!-- Close Button -->
    <button type="button" class="mobile-menu__close" aria-label="Close mobile menu">
      {% render 'icon', icon: 'close', class: 'mobile-menu__close-icon', size: 'medium' %}
    </button>
  </div>

  <!-- Search Section -->
  <div class="mobile-menu__search">
    <div class="mobile-menu__search-wrapper">
      {% render 'icon', icon: 'search', class: 'mobile-menu__search-icon', size: 'medium' %}
      <input
        type="search"
        placeholder="Search products..."
        class="mobile-menu__search-input"
        aria-label="Search products"
      >
    </div>
  </div>

  <!-- Quick Actions Section -->
  <div class="mobile-menu__section">
    <h3 class="mobile-menu__section-title">Quick Actions</h3>
    <div class="mobile-menu__quick-actions">
      <a href="{{ routes.cart_url }}" class="mobile-menu__quick-action">
        {% render 'icon', icon: 'cart', class: 'mobile-menu__quick-action-icon', size: 'medium' %}
        <span class="mobile-menu__quick-action-text">Cart</span>
      </a>

      <a href="{{ routes.account_url }}" class="mobile-menu__quick-action">
        {% render 'icon', icon: 'user', class: 'mobile-menu__quick-action-icon', size: 'medium' %}
        <span class="mobile-menu__quick-action-text">Sign In</span>
      </a>
    </div>
  </div>

  <!-- Navigation Section -->
  <div class="mobile-menu__section">
    <h3 class="mobile-menu__section-title">Navigation</h3>
    <div class="mobile-menu__navigation">
      <a href="/collections/all" class="mobile-menu__nav-link">
        {% render 'icon', icon: 'bag', class: 'mobile-menu__nav-icon', size: 'medium' %}
        <span class="mobile-menu__nav-text">Shop Now</span>
      </a>

      <a href="/pages/guarantee" class="mobile-menu__nav-link">
        {% render 'icon', icon: 'shield', class: 'mobile-menu__nav-icon', size: 'medium' %}
        <span class="mobile-menu__nav-text">Our Guarantee</span>
      </a>

      <a href="https://discord.gg/bloxmania" target="_blank" class="mobile-menu__nav-link">
        {% render 'icon', icon: 'discord', class: 'mobile-menu__nav-icon text-blue-500', size: 'medium' %}
        <span class="mobile-menu__nav-text">Daily Giveaways</span>
      </a>

      <a href="/pages/purchasing-guide" class="mobile-menu__nav-link">
        {% render 'icon', icon: 'tag', class: 'mobile-menu__nav-icon', size: 'medium' %}
        <span class="mobile-menu__nav-text">Purchasing Guide</span>
      </a>
    </div>
  </div>

  <!-- Social Media Section -->
  <div class="mobile-menu__section">
    <div class="mobile-menu__social">
      <a href="https://discord.gg/bloxmania" target="_blank" class="mobile-menu__social-link">
        {% render 'icon', icon: 'discord', class: 'mobile-menu__social-icon text-indigo-500', size: 'medium' %}
        <span class="mobile-menu__social-text">Discord</span>
      </a>

      <a href="https://youtube.com/@bloxmania" target="_blank" class="mobile-menu__social-link">
        {% render 'icon', icon: 'youtube', class: 'mobile-menu__social-icon text-red-600', size: 'medium' %}
        <span class="mobile-menu__social-text">YouTube</span>
      </a>

      <a href="https://tiktok.com/@bloxmania" target="_blank" class="mobile-menu__social-link">
        {% render 'icon', icon: 'tiktok', class: 'mobile-menu__social-icon', size: 'medium' %}
        <span class="mobile-menu__social-text">TikTok</span>
      </a>
    </div>
  </div>

  <!-- Footer Section -->
  <div class="mobile-menu__footer">
    <div class="mobile-menu__footer-links">
      <a href="/pages/contact" class="mobile-menu__footer-link">Contact Us</a>
      <a href="/pages/privacy-policy" class="mobile-menu__footer-link">Privacy Policy</a>
      <a href="/pages/terms-of-service" class="mobile-menu__footer-link">Terms of Service</a>
    </div>
    <p class="mobile-menu__footer-copyright">¬© 2025 BloxMania. All rights reserved.</p>
  </div>
</div>
