{%- style -%}
  .chat-widget {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    z-index: 9999;
    font-family: inherit;
  }

  .chat-trigger {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #ffd800, #e6c200);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow:
      0 8px 25px rgba(255, 216, 0, 0.4),
      0 0 20px rgba(255, 216, 0, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    animation: chat-pulse 2s infinite;
    position: relative;
    overflow: hidden;
  }

  .chat-trigger::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    transition: all 0.4s ease;
    transform: translate(-50%, -50%);
  }

  .chat-trigger:hover::before {
    width: 100%;
    height: 100%;
  }

  .chat-trigger:hover {
    transform: translateY(-3px) scale(1.1);
    box-shadow:
      0 12px 35px rgba(255, 216, 0, 0.6),
      0 0 30px rgba(255, 216, 0, 0.4);
  }

  .chat-trigger svg {
    width: 24px;
    height: 24px;
    color: #000;
    transition: all 0.3s ease;
    position: relative;
    z-index: 1;
  }

  .chat-trigger.active svg {
    transform: rotate(45deg);
  }

  .chat-window {
    position: absolute;
    bottom: 80px;
    right: 0;
    width: 350px;
    height: 500px;
    background: rgba(29, 30, 38, 0.98);
    backdrop-filter: blur(20px);
    border-radius: 16px;
    border: 1px solid rgba(255, 216, 0, 0.3);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 0 30px rgba(255, 216, 0, 0.2);
    transform: translateY(20px) scale(0.9);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .chat-window.active {
    transform: translateY(0) scale(1);
    opacity: 1;
    visibility: visible;
  }

  .chat-header {
    padding: 1.5rem;
    border-bottom: 1px solid rgba(255, 216, 0, 0.2);
    background: linear-gradient(135deg, rgba(255, 216, 0, 0.1), rgba(89, 186, 185, 0.1));
  }

  .chat-header h3 {
    margin: 0 0 0.5rem 0;
    color: #ffffff;
    font-size: 1.25rem;
    font-weight: 700;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .chat-header p {
    margin: 0;
    color: #d1d5db;
    font-size: 0.875rem;
  }

  .chat-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .status-indicator {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
    animation: status-pulse 2s infinite;
  }

  .status-text {
    color: #10b981;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .chat-content {
    padding: 1.5rem;
    height: calc(100% - 140px);
    overflow-y: auto;
  }

  .chat-options {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .chat-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: rgba(37, 39, 48, 0.8);
    border: 1px solid rgba(255, 216, 0, 0.2);
    border-radius: 12px;
    text-decoration: none;
    color: #ffffff;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .chat-option:hover {
    background: rgba(37, 39, 48, 1);
    border-color: #ffd800;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 216, 0, 0.2);
  }

  .chat-option-icon {
    width: 24px;
    height: 24px;
    background: linear-gradient(135deg, #ffd800, #e6c200);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .chat-option-icon svg {
    width: 14px;
    height: 14px;
    color: #000;
  }

  .chat-option-text {
    flex: 1;
  }

  .chat-option-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: #ffffff;
  }

  .chat-option-subtitle {
    font-size: 0.75rem;
    color: #9ca3af;
  }

  .chat-footer {
    padding: 1rem 1.5rem;
    border-top: 1px solid rgba(255, 216, 0, 0.2);
    background: rgba(24, 25, 38, 0.8);
  }

  .chat-footer-text {
    text-align: center;
    color: #9ca3af;
    font-size: 0.75rem;
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .chat-widget {
      bottom: 1rem;
      right: 1rem;
    }

    .chat-trigger {
      width: 56px;
      height: 56px;
    }

    .chat-trigger svg {
      width: 22px;
      height: 22px;
    }

    .chat-window {
      width: calc(100vw - 2rem);
      max-width: 340px;
      height: 450px;
      bottom: 70px;
      right: 0;
    }
  }

  @media (max-width: 480px) {
    .chat-window {
      width: calc(100vw - 1.5rem);
      max-width: 320px;
      height: 400px;
    }

    .chat-content {
      padding: 1rem;
    }

    .chat-header {
      padding: 1rem;
    }
  }
{%- endstyle -%}

