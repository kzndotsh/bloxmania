{% comment %}
  Renders a loading spinner

  Accepts:
  - size: {String} Spinner size. Values are "small", "medium", "large". Default: "medium" (optional)
  - color: {String} Spinner color. Values are "primary", "secondary", "white", "current". Default: "current" (optional)

  Usage:
  {% render 'loading-spinner' %}
  {% render 'loading-spinner', size: 'small', color: 'primary' %}
{% endcomment %}

{%- liquid
  assign size = size | default: 'medium'
  assign color = color | default: 'current'

  case size
    when 'small'
      assign spinner_size = 'w-4 h-4'
    when 'large'
      assign spinner_size = 'w-8 h-8'
    else
      assign spinner_size = 'w-5 h-5'
  endcase

  case color
    when 'primary'
      assign spinner_color = 'text-primary'
    when 'secondary'
      assign spinner_color = 'text-secondary'
    when 'white'
      assign spinner_color = 'text-white'
    else
      assign spinner_color = 'text-current'
  endcase
-%}

<svg
  class="animate-spin {{ spinner_size }} {{ spinner_color }}"
  xmlns="http://www.w3.org/2000/svg"
  fill="none"
  viewBox="0 0 24 24"
  aria-hidden="true"
>
  <circle
    class="opacity-25"
    cx="12"
    cy="12"
    r="10"
    stroke="currentColor"
    stroke-width="4"
  ></circle>
  <path
    class="opacity-75"
    fill="currentColor"
    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
  ></path>
</svg>
