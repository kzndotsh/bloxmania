{% comment %}
  Renders product features list with icons

  Accepts:
  - block: {Object} Block settings with features_list (required)

  Usage:
  {% render 'product-features', block: block %}
{% endcomment %}

{%- if block.settings.features_list != blank -%}
  {%- assign features = block.settings.features_list | newline_to_br | split: '<br />' -%}

  <div class="product-features bg-gray-900/50 rounded-xl p-6 border border-gray-700">
    <h2 class="text-lg font-semibold text-white mb-4">
      {{ 'products.product.features' | t | default: 'Features' }}
    </h2>

    <ul class="space-y-3">
      {%- for feature in features -%}
        {%- unless feature == blank -%}
          <li class="flex items-center text-gray-300">
            {% render 'icon', icon: 'check', size: 'medium', color: 'primary', class: 'mr-3 flex-shrink-0' %}
            <span>{{ feature | strip }}</span>
          </li>
        {%- endunless -%}
      {%- endfor -%}
    </ul>
  </div>
{%- endif -%}
