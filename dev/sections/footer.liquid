{% comment %}
  Modern Footer Component
  Features:
  - Semantic HTML structure
  - Design system integration
  - Responsive layout with progressive enhancement
  - Font Awesome icons
  - CSS custom properties
  - Accessibility best practices
{% endcomment %}

<footer class="footer" role="contentinfo" aria-label="Site footer">
  <!-- Background Pattern -->
  <div class="footer__background" aria-hidden="true"></div>

  <div class="footer__container">
    <!-- Main Footer Content -->
    <div class="footer__main">
      <!-- Brand Section -->
      <div class="footer__brand">
        <div class="footer__logo">
          <h2 class="footer__logo-text"><span class="footer__logo-highlight">Blox</span>Mania</h2>
        </div>

        <p class="footer__description">
          {{
            section.settings.company_description
            | default: 'The fastest, safest, and most reliable marketplace for digital gaming items.'
          }}
        </p>

        <!-- Social Links -->
        <div
          class="footer__social"
          role="list"
          aria-label="Social media links"
        >
          {%- if section.settings.discord_url != blank -%}
            <a
              href="{{ section.settings.discord_url }}"
              class="footer__social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Follow us on Discord"
            >
              <i class="fab fa-discord" aria-hidden="true"></i>
              <span class="footer__social-text">Discord</span>
            </a>
          {%- endif -%}

          {%- if section.settings.youtube_url != blank -%}
            <a
              href="{{ section.settings.youtube_url }}"
              class="footer__social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Subscribe to our YouTube channel"
            >
              <i class="fab fa-youtube" aria-hidden="true"></i>
              <span class="footer__social-text">YouTube</span>
            </a>
          {%- endif -%}

          {%- if section.settings.tiktok_url != blank -%}
            <a
              href="{{ section.settings.tiktok_url }}"
              class="footer__social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Follow us on TikTok"
            >
              <i class="fab fa-tiktok" aria-hidden="true"></i>
              <span class="footer__social-text">TikTok</span>
            </a>
          {%- endif -%}

          {%- if section.settings.twitter_url != blank -%}
            <a
              href="{{ section.settings.twitter_url }}"
              class="footer__social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Follow us on Twitter"
            >
              <i class="fab fa-twitter" aria-hidden="true"></i>
              <span class="footer__social-text">Twitter</span>
            </a>
          {%- endif -%}

          {%- if section.settings.instagram_url != blank -%}
            <a
              href="{{ section.settings.instagram_url }}"
              class="footer__social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Follow us on Instagram"
            >
              <i class="fab fa-instagram" aria-hidden="true"></i>
              <span class="footer__social-text">Instagram</span>
            </a>
          {%- endif -%}
        </div>
      </div>

      <!-- Navigation Links -->
      <nav
        class="footer__nav"
        role="navigation"
        aria-label="Footer navigation"
      >
        <div class="footer__nav-section">
          <h3 class="footer__nav-title">Shop</h3>
          <ul class="footer__nav-list" role="list">
            <li>
              <a href="{{ routes.all_products_collection_url }}" class="footer__nav-link">
                <i class="fas fa-store" aria-hidden="true"></i>
                All Items
              </a>
            </li>
            <li>
              <a
                href="{{ collections.featured.url | default: routes.all_products_collection_url }}"
                class="footer__nav-link"
              >
                <i class="fas fa-star" aria-hidden="true"></i>
                Featured
              </a>
            </li>
            <li>
              <a
                href="{{ collections['new-arrivals'].url | default: routes.all_products_collection_url }}"
                class="footer__nav-link"
              >
                <i class="fas fa-plus-circle" aria-hidden="true"></i>
                New Arrivals
              </a>
            </li>
          </ul>
        </div>

        <div class="footer__nav-section">
          <h3 class="footer__nav-title">Support</h3>
          <ul class="footer__nav-list" role="list">
            <li>
              <a href="{{ pages.guarantee.url | default: '/pages/guarantee' }}" class="footer__nav-link">
                <i class="fas fa-shield-alt" aria-hidden="true"></i>
                Our Guarantee
              </a>
            </li>
            <li>
              <a href="{{ pages.contact.url | default: '/pages/contact' }}" class="footer__nav-link">
                <i class="fas fa-envelope" aria-hidden="true"></i>
                Contact Us
              </a>
            </li>
          </ul>
        </div>

        <div class="footer__nav-section">
          <h3 class="footer__nav-title">Community</h3>
          <ul class="footer__nav-list" role="list">
            <li>
              <a
                href="{{ section.settings.discord_url | default: 'https://discord.gg/bloxmania' }}"
                class="footer__nav-link"
                target="_blank"
                rel="noopener"
              >
                <i class="fab fa-discord" aria-hidden="true"></i>
                Discord Server
              </a>
            </li>
            <li>
              <a
                href="{{ pages['purchasing-guide'].url | default: '/pages/purchasing-guide' }}"
                class="footer__nav-link"
              >
                <i class="fas fa-book-open" aria-hidden="true"></i>
                Buying Guide
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </div>

    <!-- Footer Bottom -->
    <div class="footer__bottom">
      <!-- Made with love badge - centered and prominent -->
      <div class="footer__love-badge">
        <div class="footer__badge">
          <span>Made with</span>
          <i class="fas fa-heart" aria-hidden="true"></i>
          <span>for gamers</span>
        </div>
      </div>

      <!-- Legal links - centered below -->
      <div class="footer__legal-links">
        <span class="footer__copyright">Â© {{ 'now' | date: '%Y' }} BloxMania</span>
        <span class="footer__legal-separator">|</span>
        <a href="{{ pages['privacy-policy'].url | default: '/pages/privacy-policy' }}">Privacy Policy</a>
        <span class="footer__legal-separator">|</span>
        <a href="{{ pages['terms-of-service'].url | default: '/pages/terms-of-service' }}">Terms of Service</a>
        <span class="footer__legal-separator">|</span>
        <a href="{{ pages['refund-policy'].url | default: '/pages/refund-policy' }}">Refund Policy</a>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "header",
      "content": "Company Information"
    },
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Company Description",
      "default": "The fastest, safest, and most reliable marketplace for digital gaming items.",
      "info": "Brief description of your company"
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    {
      "type": "url",
      "id": "discord_url",
      "label": "Discord URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "header",
      "content": "Footer Settings"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment method icons",
      "default": true
    }
  ]
}
{% endschema %}
