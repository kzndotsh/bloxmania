{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .guarantee-hero {
    background-image: url('{{ 'image-okok1.png' | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
{%- endstyle -%}

<div class="guarantee-hero section-{{ section.id }}-padding">
  <div class="guarantee-hero-content">
    {% if section.settings.show_rating_section %}
      <div class="guarantee-rating">
        <span class="font-semibold text-gray-200 text-lg">
          {{- section.settings.rating_text | default: 'Excellent' -}}
        </span>
        <span class="flex items-center text-[#ffd800] font-bold text-lg">
          {% render 'icon', icon: 'star', class: 'w-5 h-5 mr-1 fill-[#ffd800]' %}
          {{ section.settings.rating_score | default: '5.0' }}
        </span>
        <span class="text-gray-400 text-lg">{{ section.settings.rating_out_of | default: 'out of 5' }}</span>
        <span class="text-green-400 font-semibold text-lg">
          {{- section.settings.trusted_text | default: 'Trusted' -}}
        </span>
      </div>
    {% endif %}

    <div class="guarantee-heading-container">
      <!-- Left side icons in organic formation - only visible on larger screens -->
      {% if section.settings.show_floating_icons %}
        <div class="guarantee-icon-container absolute left-0 top-1/2 transform -translate-y-1/3 -translate-x-[28rem]">
          <div class="flex flex-col items-center space-y-24">
            <img
              src="{{ 'image-ICON1.png' | asset_url }}"
              alt="Gaming Icon 1"
              class="guarantee-icon-float guarantee-icon-float--orange transform -translate-x-8"
              width="96"
              height="96"
              loading="lazy"
            >
            <div class="flex space-x-32">
              <img
                src="{{ 'image-ICON2.png' | asset_url }}"
                alt="Gaming Icon 2"
                class="guarantee-icon-float guarantee-icon-float--purple transform translate-y-4"
                width="96"
                height="96"
                loading="lazy"
              >
              <img
                src="{{ 'image-ICON3.png' | asset_url }}"
                alt="Gaming Icon 3"
                class="guarantee-icon-float guarantee-icon-float--blue transform -translate-y-2"
                width="96"
                height="96"
                loading="lazy"
              >
            </div>
          </div>
        </div>

        <!-- Right side icons in organic formation - only visible on larger screens -->
        <div class="guarantee-icon-container absolute right-0 top-1/2 transform -translate-y-1/3 translate-x-[28rem]">
          <div class="flex flex-col items-center space-y-24">
            <img
              src="{{ 'image-ICON4.png' | asset_url }}"
              alt="Gaming Icon 4"
              class="guarantee-icon-float guarantee-icon-float--yellow transform translate-x-8"
              width="96"
              height="96"
              loading="lazy"
            >
            <div class="flex space-x-32">
              <img
                src="{{ 'image-ICON5.png' | asset_url }}"
                alt="Gaming Icon 5"
                class="guarantee-icon-float guarantee-icon-float--green transform -translate-y-4"
                width="96"
                height="96"
                loading="lazy"
              >
              <img
                src="{{ 'image-ICON6.png' | asset_url }}"
                alt="Gaming Icon 6"
                class="guarantee-icon-float guarantee-icon-float--red transform translate-y-2"
                width="96"
                height="96"
                loading="lazy"
              >
            </div>
          </div>
        </div>
      {% endif %}

      <h1 class="guarantee-heading">
        {{ section.settings.main_heading | default: 'Your Satisfaction, Our' }}
        <span class="underline decoration-[#ffd800]">{{ section.settings.accent_text | default: 'Promise' }}</span>
      </h1>
    </div>

    <p class="guarantee-description">
      {{
        section.settings.description
        | default: "At BloxMania, we're dedicated to delivering joy straight to your gaming experience. When you make a purchase, you want it quick, easy, and secure - and that's exactly what we deliver!"
      }}
    </p>

    {% if section.settings.show_guarantee_tags %}
      <div class="guarantee-tags">
        <span class="guarantee-tag guarantee-tag--blue">
          {% render 'icon', icon: 'zap', class: 'w-5 h-5 mr-2' %}
          {{ section.settings.tag1_text | default: 'Fast Delivery' }}
        </span>
        <span class="guarantee-tag guarantee-tag--yellow">
          {% render 'icon', icon: 'tag', class: 'w-5 h-5 mr-2' %}
          {{ section.settings.tag2_text | default: 'Best Prices' }}
        </span>
        <span class="guarantee-tag guarantee-tag--blue">
          {% render 'icon', icon: 'message-circle', class: 'w-5 h-5 mr-2' %}
          {{ section.settings.tag3_text | default: '24/7 Support' }}
        </span>
      </div>
    {% endif %}
  </div>

  <div class="guarantee-card">
    <div class="guarantee-icon">
      {% render 'icon', icon: 'shield', class: 'w-12 h-12 text-[#ffd800]' %}
      {% render 'icon', icon: 'check', class: 'absolute inset-0 w-6 h-6 text-[#ffd800] m-auto' %}
    </div>

    <h2 class="guarantee-card-title">{{ section.settings.card_title | default: 'Our Guarantee' }}</h2>

    <p class="guarantee-card-description">
      {{
        section.settings.card_description
        | default: 'We promise a smooth, secure, and reliable experience every time you shop with BloxMania. If you ever have an issue with your order, our support team is available 24/7 to help you resolve it quickly.'
      }}
    </p>

    <ul class="guarantee-list">
      <li>
        <b>
          {{-
            section.settings.list_item1
            | default: 'Flawless Delivery: We ensure your items are delivered securely and efficiently every time.'
          -}}
        </b>
      </li>
      <li>
        <b>
          {{-
            section.settings.list_item2
            | default: 'Best Prices: We constantly monitor the market to ensure you get the best deals.'
          -}}
        </b>
      </li>
      <li>
        <b>
          {{-
            section.settings.list_item3
            | default: '24/7 Support: Our friendly team is always here to help, day or night.'
          -}}
        </b>
      </li>
      <li>
        <b>
          {{-
            section.settings.list_item4
            | default: 'Secure Payments: All transactions are processed through trusted gateways like Stripe, Apple Pay, and Google Pay.'
          -}}
        </b>
      </li>
      <li>
        <b>
          {{-
            section.settings.list_item5
            | default: "Refund Policy: If you don't receive your order due to an error on our end, you'll get a full refund according to our policy."
          -}}
        </b>
      </li>
    </ul>

    <div class="guarantee-disclaimer">
      {{
        section.settings.disclaimer
        | default: 'BloxMania operates independently and is not affiliated with Roblox Corporation or any game publishers. All trademarks are property of their respective owners.'
      }}
    </div>
  </div>

  <!-- Promotional section with controller image -->
  {% if section.settings.show_promo_section %}
    <div class="guarantee-promo">
      <!-- Controller Image -->
      <div class="guarantee-promo-image">
        <img
          src="{{ 'image-Controller.png' | asset_url }}"
          alt="Gaming Controller"
          class="w-96 h-96 lg:w-[28rem] lg:h-[28rem] xl:w-[32rem] xl:h-[32rem] object-contain transition-all duration-300 transform hover:scale-105 drop-shadow-[0_0_1px_rgba(255,255,255,0.3)] cursor-pointer"
          loading="lazy"
          width="512"
          height="512"
        >
      </div>

      <!-- Promotional Text -->
      <div class="guarantee-promo-content">
        <h2 class="guarantee-promo-heading">
          {{ section.settings.promo_heading | default: 'Why Wait?' -}}
          <br>
          Join the Thousands of Happy
          <span class="text-[#ffd800]">{{ section.settings.promo_accent | default: 'BloxMania' }}</span>
          {{ 'Customers Today!' | default: 'Customers Today!' }}
        </h2>
        <p class="guarantee-promo-description">
          {{
            section.settings.promo_description
            | default: "With BloxMania, you're not just buying items - you're joining a community that's all about fast, secure, and happy transactions. So go ahead, make that purchase, and let us show you how we do it!"
          }}
        </p>
        <a href="{{ section.settings.cta_button_link | default: routes.collections_url }}" class="guarantee-button">
          {{- section.settings.cta_button_text | default: 'Shop Now!' -}}
        </a>
      </div>
    </div>
  {% endif %}
</div>

