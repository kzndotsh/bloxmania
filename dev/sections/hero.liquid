<section
  class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden"
>
  <!-- Background with proper overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/30 to-black/50"></div>

  <!-- Main content container -->
  <div class="relative z-10 w-full max-w-5xl mx-auto px-6 py-16">
    <div class="text-center">
      <!-- Rating Badge -->
      <div class="section-fade-in flex justify-center mb-8">
        {% render 'responsive-image',
          image: 'image-ratingz.png',
          alt: '5-Star Rating',
          class: 'h-10 w-auto',
          width: 100,
          height: 35,
          loading: 'eager',
          sizes: '100px'
        %}
      </div>

      <!-- Main Title -->
      <h1 class="hero-section__title section-fade-in mb-6">
        <span class="hero-section__title-primary">Instantly Buy Your Favorite Items</span>
        <span class="hero-section__title-accent">Fast, Safe, and Easy!</span>
      </h1>

      <!-- Subtitle -->
      <p class="hero-description section-fade-in mb-10">
        {% if section.settings.subtitle != blank %}
          {{
            section.settings.subtitle
            | replace: 'automated system', '<strong class="text-primary font-semibold">automated system</strong>'
          }}
        {% else %}
          BloxMania is the fastest, cheapest, and safest shop for digital goods, with instant delivery. Our
          <strong class="text-primary font-semibold">automated system</strong> ensures you receive your items securely
          and swiftly!
        {% endif %}
      </p>

      <!-- CTA Button -->
      <div class="hero-cta section-fade-in mb-16">
        <a
          href="{{ section.settings.cta_link | default: '/collections/all' }}"
          class="btn btn--gaming btn--xl"
          aria-label="Shop gaming items now"
        >
          <span>{{ section.settings.cta_text | default: 'SHOP NOW' }}</span>
          {% render 'icon', icon: 'arrow-right', size: 'medium', class: 'ml-2' %}
        </a>
      </div>

      <!-- Trusted by Top Creators Section -->
      <div class="hero-section__trusted">
        <h2 class="hero-section__trusted-title mb-3">Trusted by Top Creators</h2>
        <p class="hero-section__trusted-subtitle mb-8">Join thousands of satisfied customers who trust BloxMania</p>

        <!-- Creators Carousel -->
        <div>
          {% render 'creators-carousel' %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "title_part1",
      "label": "Hero Title Part 1",
      "default": "Instantly Buy Your Favorite Items"
    },
    {
      "type": "text",
      "id": "title_part2",
      "label": "Hero Title Part 2 (Yellow)",
      "default": "Fast, Safe, and Easy!"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Hero Subtitle",
      "default": "BloxMania is the fastest, cheapest, and safest shop for digital goods, with instant delivery. Our automated system ensures you receive your items securely and swiftly!"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
