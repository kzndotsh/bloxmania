    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "grid-3",
          "label": "3 Columns"
        },
        {
          "value": "grid-4",
          "label": "4 Columns"
        },
        {
          "value": "grid-5",
          "label": "5 Columns"
        }
