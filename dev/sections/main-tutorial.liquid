{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .tutorial-video-container {
    position: relative;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .tutorial-video {
    width: 100%;
    height: auto;
    display: block;
    background-color: #1e293b;
  }

  @media (max-width: 768px) {
    .tutorial-video-container {
      max-width: 100%;
      margin: 0;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="container mx-auto">
    <!-- Tutorial Video Section -->
    <div class="tutorial-video-section mb-12">
      <div class="tutorial-video-container">
        <video
          class="tutorial-video"
          controls
          preload="metadata"
          poster="{{ section.settings.video_poster | image_url: width: 800 }}"
        >
          <source
            src="{{ section.settings.video_url }}"
            type="video/mp4"
            {% comment %}Note: Using external video URL, not asset_url since this is a Shopify CDN video{% endcomment %}
          >
          <p class="text-body text-gray-400 text-center py-8">
            Your browser doesn't support HTML5 video.
            <a
              href="{{ section.settings.video_url }}"
              class="text-yellow-400 hover:underline"
            >
              Download the video
            </a>
            to watch it.
          </p>
        </video>
      </div>
    </div>

    <!-- Tutorial Content -->
    {% if section.settings.show_content %}
      <div class="tutorial-content prose prose-invert max-w-none text-body">
        {% if section.settings.content != blank %}
          {{ section.settings.content }}
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Tutorial",
  "settings": [
    {
      "type": "header",
      "content": "Video Settings"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL",
      "info": "Enter the URL of your tutorial video"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video Poster Image",
      "info": "Optional poster image for the video"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "checkbox",
      "id": "show_content",
      "label": "Show additional content",
      "default": true
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Tutorial content",
      "info": "Add additional content below the video"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Tutorial"
    }
  ]
}
{% endschema %}
