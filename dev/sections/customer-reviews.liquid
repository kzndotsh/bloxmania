<section class="customer-reviews-section section container-spacing bg-slate-900 section-fade-in">
  <div class="max-w-6xl mx-auto text-center relative z-10">
    <div class="mb-12">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-white mb-2">
        Customer <span class="text-primary">Reviews</span>
      </h2>
      <p class="text-base md:text-lg text-gray-300 mb-6">
        {{ section.settings.subtitle | default: 'Trusted by over 10,000 Happy Customers' }}
      </p>

      <div class="flex justify-center items-center gap-4 mb-2">
        <img
          src="{{ 'image-ratingz.png' | asset_url }}"
          alt="5 Star Rating"
          class="h-10 w-auto"
          width="120"
          height="48"
          loading="lazy"
        >
      </div>
      <p class="text-gray-400">Based on 2,000+ reviews</p>
    </div>

    <div class="customer-reviews-grid">
      <div class="customer-review-card">
        <div class="customer-review-stars" role="img" aria-label="5 out of 5 stars">
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
        </div>
        <p class="customer-review-text">"Great seller communication! Just as described. Perfect!"</p>
        <div class="customer-review-footer">
          <span class="customer-review-author">Customer</span>
          <span class="customer-review-date">Past 6 months</span>
        </div>
      </div>

      <div class="customer-review-card">
        <div class="customer-review-stars" role="img" aria-label="5 out of 5 stars">
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
        </div>
        <p class="customer-review-text">"Trustworthy Seller! I had zero problems receiving exactly what I paid for."</p>
        <div class="customer-review-footer">
          <span class="customer-review-author">Customer</span>
          <span class="customer-review-date">Past year</span>
        </div>
      </div>

      <div class="customer-review-card">
        <div class="customer-review-stars" role="img" aria-label="5 out of 5 stars">
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
        </div>
        <p class="customer-review-text">"Delivery was rapid, lovely seller and the items were as described."</p>
        <div class="customer-review-footer">
          <span class="customer-review-author">Customer</span>
          <span class="customer-review-date">Past month</span>
        </div>
      </div>

      <div class="customer-review-card">
        <div class="customer-review-stars" role="img" aria-label="5 out of 5 stars">
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
          <span class="star" aria-hidden="true">★</span>
        </div>
        <p class="customer-review-text">"really good and trustworthy! totally worth it! great communication"</p>
        <div class="customer-review-footer">
          <span class="customer-review-author">Customer</span>
          <span class="customer-review-date">Past 6 months</span>
        </div>
      </div>
    </div>

    <div class="mt-8">
      <a
        href="{{ section.settings.cta_link | default: '/collections/all' }}"
        class="btn btn--primary btn--lg"
        aria-label="Start shopping for gaming items"
      >
        Start Shopping Now
        {% render 'icon', icon: 'arrow-right', size: 'small', class: 'flex-shrink-0' %}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Customer Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Customer Reviews & Ratings"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Trusted by over 10,000 Happy Customers"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "Customer Reviews"
    }
  ]
}
{% endschema %}
