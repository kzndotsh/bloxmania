{%- style -%}
  .footer {
    background: #23243a;
    padding: 3rem 2rem 1rem;
    border-top: 1px solid #333441;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer-section h3 {
    color: #ffd800;
    margin-bottom: 1rem;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .footer-section p,
  .footer-section a {
    color: #9ca3af;
    text-decoration: none;
    transition: color 0.3s ease;
    line-height: 1.6;
  }

  .footer-section a:hover {
    color: #ffd800;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    display: inline-block;
    padding: 0.25rem 0;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 216, 0, 0.1);
    border: 1px solid rgba(255, 216, 0, 0.3);
    border-radius: 50%;
    color: #ffd800;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: #ffd800;
    color: #000;
    transform: translateY(-2px);
    box-shadow: 0 0 20px rgba(255, 216, 0, 0.3);
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    margin-top: 2rem;
    border-top: 1px solid #333441;
    color: #9ca3af;
    font-size: 0.875rem;
  }

  .footer-bottom a {
    color: #ffd800;
    text-decoration: none;
  }

  .footer-bottom a:hover {
    text-decoration: underline;
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .newsletter-input {
    flex: 1;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid #333441;
    border-radius: 8px;
    color: #ffffff;
    font-size: 0.875rem;
  }

  .newsletter-input::placeholder {
    color: #9ca3af;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: #ffd800;
    box-shadow: 0 0 0 2px rgba(255, 216, 0, 0.2);
  }

  .newsletter-btn {
    padding: 0.75rem 1.5rem;
    background: #ffd800;
    color: #000;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .newsletter-btn:hover {
    background: #e6c200;
    transform: translateY(-1px);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .contact-icon {
    width: 16px;
    height: 16px;
    color: #ffd800;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer {
      padding: 2rem 1rem 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }

    .newsletter-form {
      flex-direction: column;
    }
  }
{%- endstyle -%}

