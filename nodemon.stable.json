{
  "watch": [
    "dev/css/**/*.css",
    "dev/js/**/*.js",
    "dev/sections/**/*.liquid",
    "dev/snippets/**/*.liquid",
    "dev/templates/**/*.liquid"
  ],
  "ext": "js,css,liquid",
  "ignore": [
    "dev/css/build/",
    "dev/js/build/",
    "node_modules/",
    ".git/",
    "build/",
    "theme/",
    "*.log",
    "*.tmp",
    ".DS_Store",
    "Thumbs.db",
    "**/node_modules/**",
    "**/.git/**",
    "**/build/**",
    "**/theme/**",
    "dev/images/**/*",
    "dev/layout/**/*",
    "dev/config/**/*",
    "dev/locales/**/*"
  ],
  "delay": 3000,
  "exec": "npm run build:dev",
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": false,
  "colours": true,
  "restartable": "rs",
  "legacyWatch": false,
  "polling": false,
  "ignoreRoot": [
    "node_modules/",
    ".git/",
    "build/",
    "theme/"
  ],
  "events": {
    "restart": "echo 'ðŸ”„ Build triggered by file change'"
  },
  "watchOptions": {
    "ignoreInitial": true,
    "ignorePermissionErrors": true,
    "atomic": true,
    "usePolling": false,
    "interval": 2000,
    "binaryInterval": 5000
  }
} 