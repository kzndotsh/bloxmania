{% comment %}
  FOUC Test Page Template
  This page helps test and validate FOUC fixes
{% endcomment %}

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-white mb-8 text-center">FOUC Test Page</h1>

    <div class="bg-card rounded-lg p-6 mb-8">
      <h2 class="text-2xl font-semibold text-white mb-4">Test Results</h2>
      <p class="text-gray-300 mb-4">
        This page tests the Flash of Unstyled Content (FOUC) fixes. Open the browser console to see test results.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
        <button
          onclick="FOUCTest.simulateHardRefresh()"
          class="btn-primary"
        >
          Simulate Hard Refresh
        </button>
        <button
          onclick="FOUCTest.testCartNotificationShow()"
          class="btn-secondary"
        >
          Test Cart Notification
        </button>
      </div>
    </div>

    <div class="bg-card rounded-lg p-6 mb-8">
      <h2 class="text-2xl font-semibold text-white mb-4">Visual Elements Test</h2>

      <!-- Test hero content visibility -->
      <div class="hero-content mb-6 p-4 bg-gray-800 rounded">
        <h3 class="text-xl text-white mb-2">Hero Content (should fade in)</h3>
        <p class="text-gray-300">This element should fade in smoothly when the page loads.</p>
      </div>

      <!-- Test product cards -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
        <div class="product-card bg-gray-800 p-4 rounded">
          <img
            src="{{ 'image-10T.jpg' | asset_url }}"
            alt="Test Product 1"
            class="w-full h-32 object-cover rounded mb-2"
            width="400"
            height="128"
            loading="lazy"
          >
          <h4 class="text-white font-semibold">Test Product 1</h4>
          <p class="text-primary">$19.99</p>
        </div>

        <div class="product-card bg-gray-800 p-4 rounded">
          <img
            src="{{ 'image-RACCOON.jpg' | asset_url }}"
            alt="Test Product 2"
            class="w-full h-32 object-cover rounded mb-2"
            width="400"
            height="128"
            loading="lazy"
          >
          <h4 class="text-white font-semibold">Test Product 2</h4>
          <p class="text-primary">$24.99</p>
        </div>

        <div class="product-card bg-gray-800 p-4 rounded">
          <img
            src="{{ 'image-FENNEC.jpg' | asset_url }}"
            alt="Test Product 3"
            class="w-full h-32 object-cover rounded mb-2"
            width="400"
            height="128"
            loading="lazy"
          >
          <h4 class="text-white font-semibold">Test Product 3</h4>
          <p class="text-primary">$14.99</p>
        </div>
      </div>
    </div>

    <div class="bg-card rounded-lg p-6">
      <h2 class="text-2xl font-semibold text-white mb-4">Test Instructions</h2>
      <ol class="list-decimal list-inside text-gray-300 space-y-2">
        <li>Hard refresh this page (Ctrl+F5 or Cmd+Shift+R)</li>
        <li>Watch for any flash of unstyled content or broken images</li>
        <li>Check the browser console for test results</li>
        <li>Test the cart notification button above</li>
        <li>Verify that elements fade in smoothly</li>
        <li>Check that no elements appear before they should</li>
      </ol>
    </div>
  </div>
</div>

<style>
  /* Additional test styles */
  .test-element {
    transition: all 0.3s ease;
  }

  .test-hidden {
    opacity: 0;
    transform: translateY(20px);
  }

  .test-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  // Additional test functionality
  document.addEventListener('theme:page:loaded', function () {
    console.log('âœ… FOUC Test Page: theme:page:loaded event received');

    // Test element visibility
    const testElements = document.querySelectorAll('.hero-content, .product-card');
    testElements.forEach((el) => {
      el.classList.add('test-element');
    });
  });
</script>
