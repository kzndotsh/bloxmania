{
  "name": "bloxmania-shopify-theme",
  "version": "1.0.0",
  "description": "BloxMania - Digital Goods Marketplace Shopify Theme",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build:css && dotenv -e .env -- shopify theme dev",
    "build": "npm run build:css && dotenv -e .env -- shopify theme push",
    "build:css": "tailwindcss -i ./src/styles.css -o ./assets/base.css --watch",
    "build:css:prod": "tailwindcss -i ./src/styles.css -o ./assets/base.css --minify",
    "push": "npm run build:css:prod && dotenv -e .env -- shopify theme push",
    "pull": "dotenv -e .env -- shopify theme pull",
    "check": "dotenv -e .env -- shopify theme check",
    "check:fix": "dotenv -e .env -- shopify theme check --auto-correct",
    "package": "npm run build:css:prod && dotenv -e .env -- shopify theme package",
    "init": "dotenv -e .env -- shopify theme init",
    "list": "dotenv -e .env -- shopify theme list",
    "info": "dotenv -e .env -- shopify theme info",
    "publish": "dotenv -e .env -- shopify theme publish",
    "share": "dotenv -e .env -- shopify theme share",
    "open": "dotenv -e .env -- shopify theme open",
    "rename": "dotenv -e .env -- shopify theme rename",
    "delete": "dotenv -e .env -- shopify theme delete",
    "console": "dotenv -e .env -- shopify theme console",
    "profile": "dotenv -e .env -- shopify theme profile",
    "test": "dotenv -e .env -- shopify theme check --output=json > theme-check-report.json",
    "lint": "dotenv -e .env -- shopify theme check",
    "clean": "rm -rf node_modules package-lock.json",
    "setup": "npm install",
    "env:setup": "cp shopify.env.example .env && echo 'Created .env file from example. Please edit .env with your store settings.'"
  },
  "keywords": [
    "shopify",
    "theme",
    "ecommerce",
    "gaming",
    "digital-goods",
    "roblox",
    "fortnite"
  ],
  "author": "BloxMania Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/bloxmania-shopify-theme.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/bloxmania-shopify-theme/issues"
  },
  "homepage": "https://github.com/your-username/bloxmania-shopify-theme#readme",
  "devDependencies": {
    "@shopify/cli": "^3.0.0",
    "@shopify/theme": "^3.0.0",
    "dotenv-cli": "^8.0.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "shopify": {
    "theme": {
      "name": "BloxMania Theme",
      "version": "1.0.0",
      "description": "Digital goods marketplace theme for gaming items"
    }
  },
  "config": {
    "shopify": {
      "store": "tnqzbi-xv.myshopify.com",
      "theme_id": "auto"
    }
  }
}