{%- if paginate.pages > 1 -%}
  <nav class="pagination-wrapper" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
    <ul class="pagination list-unstyled" role="list">
      {%- if paginate.previous -%}
        <li class="pagination__item pagination__item--prev">
          <a
            href="{{ paginate.previous.url }}"
            class="pagination__item-link link motion-reduce"
            aria-label="{{ 'general.pagination.previous' | t }}"
          >
            <svg aria-hidden="true" focusable="false" class="icon icon-caret" viewBox="0 0 10 6">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
            </svg>
            {{ 'general.pagination.previous' | t }}
          </a>
        </li>
      {%- endif -%}

      {%- for part in paginate.parts -%}
        {%- if part.is_link -%}
          <li class="pagination__item">
            <a
              href="{{ part.url }}"
              class="pagination__item-link link"
              aria-label="{{ 'general.pagination.page' | t: number: part.title }}"
            >
              {{- part.title -}}
            </a>
          </li>
        {%- else -%}
          {%- if part.title == paginate.current_page -%}
            <li class="pagination__item pagination__item--current">
              <span
                class="pagination__item-link"
                aria-current="page"
                aria-label="{{ 'general.pagination.page' | t: number: part.title }}"
              >
                {{- part.title -}}
              </span>
            </li>
          {%- else -%}
            <li class="pagination__item">
              <span class="pagination__item-link">{{ part.title }}</span>
            </li>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}

      {%- if paginate.next -%}
        <li class="pagination__item pagination__item--next">
          <a
            href="{{ paginate.next.url }}"
            class="pagination__item-link link motion-reduce"
            aria-label="{{ 'general.pagination.next' | t }}"
          >
            {{ 'general.pagination.next' | t }}
            <svg aria-hidden="true" focusable="false" class="icon icon-caret" viewBox="0 0 10 6">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
            </svg>
          </a>
        </li>
      {%- endif -%}
    </ul>
  </nav>
{%- endif -%}
