<!-- Chat Widget -->
<div id="chat-widget" class="fixed bottom-20 right-6 w-80 h-96 bg-[#252730] border border-[#333441] rounded-lg shadow-2xl z-50 hidden chat-widget-enter">
  <div class="bg-[#59bab9] text-white p-4 rounded-t-lg flex justify-between items-center">
    <h3 class="font-semibold">Chat Support</h3>
    <button id="chat-close" class="text-white hover:text-gray-200 transition-colors cursor-pointer">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"/>
      </svg>
    </button>
  </div>
  <div class="p-4 h-80 flex items-center justify-center text-gray-400">
    <p>Chat support coming soon!</p>
  </div>
</div>

<!-- Chat Button -->
<button id="chat-button" class="fixed bottom-6 right-6 bg-[#ffd800] hover:bg-[#e6c200] text-white p-4 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110 z-40 cursor-pointer">
  <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
  </svg>
  <span class="absolute -top-2 -right-2 bg-red-500 text-xs text-white rounded-full w-5 h-5 flex items-center justify-center">1</span>
</button>

<style>
.chat-widget-enter {
  animation: slideUpIn 0.3s ease-out;
}

.chat-widget-exit {
  animation: slideDownOut 0.3s ease-in;
}

@keyframes slideUpIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideDownOut {
  from {
    opacity: 1;
    transform: translateY(0);
  }
  to {
    opacity: 0;
    transform: translateY(20px);
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const chatButton = document.getElementById('chat-button');
  const chatWidget = document.getElementById('chat-widget');
  const chatClose = document.getElementById('chat-close');
  let chatOpen = false;

  function toggleChat() {
    if (chatOpen) {
      chatWidget.classList.remove('chat-widget-enter');
      chatWidget.classList.add('chat-widget-exit');
      setTimeout(() => {
        chatWidget.classList.add('hidden');
        chatWidget.classList.remove('chat-widget-exit');
      }, 300);
      chatOpen = false;
    } else {
      chatWidget.classList.remove('hidden');
      chatWidget.classList.add('chat-widget-enter');
      chatOpen = true;
    }
  }

  chatButton.addEventListener('click', toggleChat);
  chatClose.addEventListener('click', toggleChat);
});
</script> 