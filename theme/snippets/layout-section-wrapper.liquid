{% comment %}
  Section Wrapper Component

  Usage:
    {% render 'layout-section-wrapper',
      classes: 'custom-class',
      background: 'dark',
      padding: 'large',
      max_width: 'full'
    %}
      <h2>Section Content</h2>
    {% endrender %}

  Parameters:
    - classes (optional): Additional CSS classes
    - background (optional): Background style variant
    - padding (optional): 'small', 'medium', 'large' (default: 'medium')
    - max_width (optional): 'container', 'full' (default: 'container')
{% endcomment %}

{%- liquid
  assign classes = classes | default: ''
  assign background = background | default: 'default'
  assign padding = padding | default: 'medium'
  assign max_width = max_width | default: 'container'

  case padding
    when 'small'
      assign padding_classes = 'py-12 px-4'
    when 'medium'
      assign padding_classes = 'py-16 px-8'
    when 'large'
      assign padding_classes = 'py-20 px-8'
    else
      assign padding_classes = 'py-16 px-8'
  endcase

  case max_width
    when 'container'
      assign width_classes = 'max-w-6xl mx-auto'
    when 'full'
      assign width_classes = 'w-full'
    else
      assign width_classes = 'max-w-6xl mx-auto'
  endcase

  case background
    when 'dark'
      assign bg_classes = 'bg-slate-900'
    when 'gradient'
      assign bg_classes = 'bg-gradient-to-br from-background to-background-surface'
    when 'image'
      assign bg_classes = 'bg-cover bg-center bg-no-repeat'
    else
      assign bg_classes = ''
  endcase

  assign all_classes = 'relative overflow-hidden' | append: ' ' | append: bg_classes | append: ' ' | append: padding_classes | append: ' ' | append: classes
-%}

<section class="{{ all_classes }}">
  <div class="{{ width_classes }} relative z-10">
    {{ content }}
  </div>
</section>
