/* Hide cart notification by default */
.cart-notification {
  display: none;
}

/* Basic SVG sizing */
svg {
  max-width: 2rem;
  max-height: 2rem;
}

/* Hide screen reader only content */
.sr-only,
.visually-hidden,
.skip-link,
.skip-links {
  position: absolute !important;
  width: 1px !important;
  height: 1px !important;
  padding: 0 !important;
  margin: -1px !important;
  overflow: hidden !important;
  clip: rect(0, 0, 0, 0) !important;
  white-space: nowrap !important;
  border: 0 !important;
}