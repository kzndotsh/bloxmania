{% comment %}
  Supported Games Section - Refactored to use components
{% endcomment %}

{% render 'layout-section-wrapper', classes: 'bg-[#1A1B26]', padding: 'medium' %}
<div class="absolute inset-0 bg-gradient-to-r from-primary/3 via-transparent to-secondary/3"></div>
<div
  class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(255,216,0,0.06),transparent_50%)] opacity-70"
></div>

<div class="text-center relative z-10">
  <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-12 text-white drop-shadow-lg">
    {{ section.settings.title | default: 'Supported Titles' }}
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
    {% render 'content-game-card', name: 'Grow A Garden', image: 'grow.png', coming_soon: true %}

    {% render 'content-game-card', name: 'Fortnite', image: 'fortnite.png', coming_soon: false %}

    {% render 'content-game-card', name: 'Slam', image: 'slam.png', coming_soon: true %}
  </div>
</div>

{% schema %}
{
  "name": "Supported Games",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Supported Titles"
    }
  ],
  "presets": [
    {
      "name": "Supported Games"
    }
  ]
}
{% endschema %}
