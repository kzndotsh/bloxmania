{%- style -%}
  .supported-games {
    padding: 5rem 2rem 7rem 2rem;
  }

  .supported-games-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .supported-games-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    margin-bottom: 3rem;
    color: #ffffff;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .games-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .games-grid {
      flex-direction: row;
      justify-content: center;
      gap: 3rem;
    }
  }

  .game-card {
    background: url('{{ 'widget-backing.png' | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 1rem;
    padding: 2rem;
    position: relative;
    border: 1px solid transparent;
    width: 100%;
    max-width: 300px;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .game-card:hover {
    transform: scale(1.05);
    border-color: #ffd800;
  }

  .game-content {
    position: relative;
    z-index: 10;
    transition: all 0.3s ease;
  }

  .game-card:hover .game-content {
    filter: blur(2px);
  }

  .game-image {
    width: 160px;
    height: 160px;
    margin: 0 auto 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .game-title {
    font-size: 20px;
    font-weight: 600;
    color: #ffffff;
  }

  .coming-soon-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 20;
  }

  .game-card:hover .coming-soon-overlay {
    opacity: 1;
  }

  .coming-soon-content {
    text-align: center;
    color: #ffffff;
  }

  .coming-soon-title {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 8px;
  }

  .coming-soon-subtitle {
    color: #d1d5db;
    font-size: 16px;
  }
{%- endstyle -%}

<section class="supported-games">
  <div class="supported-games-container">
    <h2 class="supported-games-title">Supported Titles</h2>

    <div class="games-grid">
      <!-- Grow A Garden -->
      <div class="game-card">
        <div class="game-content">
          <img
            src="{{ 'grow.png' | asset_url }}"
            alt="Grow A Garden"
            class="game-image"
          >
          <h3 class="game-title">Grow A Garden</h3>
        </div>
        <div class="coming-soon-overlay">
          <div class="coming-soon-content">
            <div class="coming-soon-title">Coming Soon</div>
            <div class="coming-soon-subtitle">Stay tuned for updates!</div>
          </div>
        </div>
      </div>

      <!-- Pet Simulator 99 -->
      <div class="game-card">
        <div class="game-content">
          <img
            src="https://ext.same-assets.com/85213452/990301288.jpeg"
            alt="Pet Simulator 99"
            class="game-image"
          >
          <h3 class="game-title">Pet Simulator 99</h3>
        </div>
        <div class="coming-soon-overlay">
          <div class="coming-soon-content">
            <div class="coming-soon-title">Coming Soon</div>
            <div class="coming-soon-subtitle">Stay tuned for updates!</div>
          </div>
        </div>
      </div>

      <!-- Fortnite -->
      <div class="game-card">
        <div class="game-content">
          <img
            src="{{ 'fortnite.png' | asset_url }}"
            alt="Fortnite"
            class="game-image"
          >
          <h3 class="game-title">Fortnite</h3>
        </div>
        <div class="coming-soon-overlay">
          <div class="coming-soon-content">
            <div class="coming-soon-title">Coming Soon</div>
            <div class="coming-soon-subtitle">Stay tuned for updates!</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

