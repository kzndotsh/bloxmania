{%- style -%}
  .feature-card {
    transition: all 0.3s ease;
    min-height: 180px;
  }

  .feature-card:hover {
    transform: scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }
{%- endstyle -%}

<section
  class="py-20"
  style="background-image: url({{ 'okok1.png' | asset_url }}); background-size: cover; background-position: center; background-repeat: no-repeat;"
>
  <div class="max-w-screen-xl mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-16 text-white">
      Why Choose <span class="text-orange-400">BloxMania</span>?
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="feature-card bg-gradient-to-br from-orange-500 to-orange-600 p-12 rounded-2xl shadow-lg text-white">
        <!-- Zap icon (lightning bolt) -->
        <svg class="w-16 h-16 text-white mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        <h3 class="text-2xl font-bold text-white mb-4">Fast and Reliable</h3>
        <p class="text-white/90 leading-relaxed text-lg">
          Our automated system ensures your items are delivered almost instantly. Our dedicated team is here to ensure
          your order is delivered as fast as possible.
        </p>
      </div>

      <div class="feature-card bg-gradient-to-br from-red-500 to-red-600 p-12 rounded-2xl shadow-lg text-white">
        <!-- Shield icon -->
        <svg class="w-16 h-16 text-white mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
        <h3 class="text-2xl font-bold text-white mb-4">Secure Transactions</h3>
        <p class="text-white/90 leading-relaxed text-lg">
          We use trusted payment systems to keep your data safe and secure.
        </p>
      </div>

      <div class="feature-card bg-gradient-to-br from-green-500 to-green-600 p-12 rounded-2xl shadow-lg text-white">
        <!-- MessageCircle icon -->
        <svg class="w-16 h-16 text-white mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        <h3 class="text-2xl font-bold text-white mb-4">24/7 Support</h3>
        <p class="text-white/90 leading-relaxed text-lg">
          Our dedicated support team is always here to help you. If you ever have an issue, join our discord and we will
          assist you right away.
        </p>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Why Choose BloxMania?"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Experience the best gaming marketplace with unmatched quality, speed, and customer service."
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us"
    }
  ]
}
{% endschema %}
