{%- style -%}
  /* Only keep complex animations that can't be easily replicated with Tailwind */
  .feature-card:hover {
    transform: translateY(-5px);
  }

  .feature-card:nth-child(2):hover {
    border-color: #59bab9;
    box-shadow: 0 10px 30px rgba(89, 186, 185, 0.2);
  }

  .feature-card:nth-child(3):hover {
    border-color: #3b5db0;
    box-shadow: 0 10px 30px rgba(59, 93, 176, 0.2);
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1);
  }
{%- endstyle -%}

<section class="py-16 px-8 bg-background/95">
  <div class="max-w-6xl mx-auto text-center">
    <div class="mb-12">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 drop-shadow-lg">
        Why Choose <span class="text-primary">BloxMania</span>?
      </h2>
      <p class="text-lg md:text-xl lg:text-2xl text-gray-300 mb-8 max-w-2xl mx-auto leading-relaxed">
        {{
          section.settings.subtitle
          | default: 'Experience the best gaming marketplace with unmatched quality, speed, and customer service.'
        }}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8">
      <!-- Feature 1: Lightning Fast Delivery -->
      <div class="feature-card bg-white/5 border border-white/10 rounded-2xl p-8 transition-all duration-300 text-center backdrop-blur-sm hover:border-primary hover:shadow-lg hover:shadow-primary/20">
        <div class="feature-content">
          <div class="feature-icon w-14 h-14 mx-auto mb-6 bg-gradient-to-br from-primary to-primary-600 rounded-2xl flex items-center justify-center transition-transform duration-300">
            <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-bold text-white mb-4 drop-shadow-sm">Lightning Fast Delivery</h3>
          <p class="text-gray-300 leading-relaxed">
            Get your items instantly! Our automated system delivers your gaming items within minutes of purchase, no
            waiting required.
          </p>
        </div>
      </div>

      <!-- Feature 2: 24/7 Customer Support -->
      <div class="feature-card bg-white/5 border border-white/10 rounded-2xl p-8 transition-all duration-300 text-center backdrop-blur-sm hover:border-accent hover:shadow-lg hover:shadow-accent/20">
        <div class="feature-content">
          <div class="feature-icon w-14 h-14 mx-auto mb-6 bg-gradient-to-br from-accent to-accent-600 rounded-2xl flex items-center justify-center transition-transform duration-300">
            <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm-5 2.5c0 .83-.67 1.5-1.5 1.5S12 7.33 12 6.5 12.67 5 13.5 5s1.5.67 1.5 1.5zM16 18H8v-.57c0-.81.48-1.53 1.22-1.85a6.95 6.95 0 015.56 0A2.01 2.01 0 0116 17.43V18z"/>
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-bold text-white mb-4 drop-shadow-sm">24/7 Customer Support</h3>
          <p class="text-gray-300 leading-relaxed">
            Our dedicated support team is always here to help. Get assistance anytime, anywhere with our round-the-clock
            customer service.
          </p>
        </div>
      </div>

      <!-- Feature 3: Secure & Trusted -->
      <div class="feature-card bg-white/5 border border-white/10 rounded-2xl p-8 transition-all duration-300 text-center backdrop-blur-sm hover:border-secondary hover:shadow-lg hover:shadow-secondary/20">
        <div class="feature-content">
          <div class="feature-icon w-14 h-14 mx-auto mb-6 bg-gradient-to-br from-secondary to-secondary-600 rounded-2xl flex items-center justify-center transition-transform duration-300">
            <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12.516 2.17a.75.75 0 00-1.032 0 11.209 11.209 0 01-7.877 3.08.75.75 0 00-.722.515A12.74 12.74 0 002.25 9.75c0 5.814 3.876 10.713 9.022 12.109a.75.75 0 00.956 0C17.424 20.463 21.3 15.564 21.3 9.75a12.74 12.74 0 00-.635-4.235.75.75 0 00-.722-.515 11.209 11.209 0 01-7.877-3.08zM15.75 9.75a3 3 0 11-6 0 3 3 0 016 0z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-bold text-white mb-4 drop-shadow-sm">Secure & Trusted</h3>
          <p class="text-gray-300 leading-relaxed">
            Your transactions are protected with enterprise-grade security. Join thousands of satisfied customers who
            trust BloxMania.
          </p>
        </div>
      </div>
    </div>

    <div class="mt-12 p-8 bg-background-surface/80 rounded-2xl border border-gray-700">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-3xl md:text-4xl lg:text-5xl font-black text-primary mb-2 drop-shadow-lg">10K+</div>
          <div class="text-gray-400 text-sm uppercase tracking-wide">Happy Customers</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl lg:text-5xl font-black text-primary mb-2 drop-shadow-lg">99.9%</div>
          <div class="text-gray-400 text-sm uppercase tracking-wide">Uptime</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl lg:text-5xl font-black text-primary mb-2 drop-shadow-lg">24/7</div>
          <div class="text-gray-400 text-sm uppercase tracking-wide">Support</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl lg:text-5xl font-black text-primary mb-2 drop-shadow-lg">5â˜…</div>
          <div class="text-gray-400 text-sm uppercase tracking-wide">Rating</div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Why Choose BloxMania?"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Experience the best gaming marketplace with unmatched quality, speed, and customer service."
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us"
    }
  ]
}
{% endschema %}
