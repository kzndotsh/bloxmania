{%- style -%}
  .why-choose-us {
    padding: 5rem 2rem;
    background: rgba(29, 30, 38, 0.95);
  }

  .why-choose-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .why-choose-header {
    margin-bottom: 4rem;
  }

  .why-choose-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .why-choose-title span {
    color: #ffd800;
  }

  .why-choose-subtitle {
    font-size: 1.25rem;
    color: #d1d5db;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .feature-card {
    background: linear-gradient(135deg, rgba(255, 216, 0, 0.1), rgba(89, 186, 185, 0.1));
    border: 1px solid transparent;
    border-radius: 1.5rem;
    padding: 2.5rem 2rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
    text-align: center;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 216, 0, 0.05), rgba(89, 186, 185, 0.05));
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }

  .feature-card:hover {
    transform: translateY(-5px) scale(1.02);
    border-color: #ffd800;
    box-shadow: 0 0 30px rgba(255, 216, 0, 0.3), 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-card:nth-child(2) {
    background: linear-gradient(135deg, rgba(89, 186, 185, 0.1), rgba(59, 93, 176, 0.1));
  }

  .feature-card:nth-child(2):hover {
    border-color: #59bab9;
    box-shadow: 0 0 30px rgba(89, 186, 185, 0.3), 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  .feature-card:nth-child(3) {
    background: linear-gradient(135deg, rgba(59, 93, 176, 0.1), rgba(255, 216, 0, 0.1));
  }

  .feature-card:nth-child(3):hover {
    border-color: #3b5db0;
    box-shadow: 0 0 30px rgba(59, 93, 176, 0.3), 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  .feature-content {
    position: relative;
    z-index: 2;
  }

  .feature-icon {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1.5rem;
    background: linear-gradient(135deg, #ffd800, #e6c200);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 12px rgba(255, 216, 0, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .feature-card:nth-child(2) .feature-icon {
    background: linear-gradient(135deg, #59bab9, #4a9f9e);
    box-shadow: 0 4px 12px rgba(89, 186, 185, 0.3);
  }

  .feature-card:nth-child(3) .feature-icon {
    background: linear-gradient(135deg, #3b5db0, #2e4a8c);
    box-shadow: 0 4px 12px rgba(59, 93, 176, 0.3);
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 6px 20px rgba(255, 216, 0, 0.5);
  }

  .feature-card:nth-child(2):hover .feature-icon {
    box-shadow: 0 6px 20px rgba(89, 186, 185, 0.5);
  }

  .feature-card:nth-child(3):hover .feature-icon {
    box-shadow: 0 6px 20px rgba(59, 93, 176, 0.5);
  }

  .feature-icon svg {
    width: 2rem;
    height: 2rem;
    color: #ffffff;
  }

  .feature-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 1rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .feature-description {
    color: #d1d5db;
    line-height: 1.6;
    font-size: 1rem;
  }

  .stats-section {
    margin-top: 4rem;
    padding: 2rem;
    background: rgba(37, 39, 48, 0.8);
    border-radius: 1.5rem;
    border: 1px solid #333441;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 900;
    color: #ffd800;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .stat-label {
    color: #9ca3af;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .why-choose-us {
      padding: 3rem 1rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .feature-card {
      padding: 2rem 1.5rem;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .stat-number {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .feature-icon {
      width: 3rem;
      height: 3rem;
    }

    .feature-icon svg {
      width: 1.5rem;
      height: 1.5rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
{%- endstyle -%}

<section class="why-choose-us">
  <div class="why-choose-container">
    <div class="why-choose-header">
      <h2 class="why-choose-title">Why Choose <span>BloxMania</span>?</h2>
      <p class="why-choose-subtitle">
        {{
          section.settings.subtitle
          | default: 'Experience the best gaming marketplace with unmatched quality, speed, and customer service.'
        }}
      </p>
    </div>

    <div class="features-grid">
      <!-- Feature 1: Lightning Fast Delivery -->
      <div class="feature-card">
        <div class="feature-content">
          <div class="feature-icon">
            <svg fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h3 class="feature-title">Lightning Fast Delivery</h3>
          <p class="feature-description">
            Get your items instantly! Our automated system delivers your gaming items within minutes of purchase, no
            waiting required.
          </p>
        </div>
      </div>

      <!-- Feature 2: 24/7 Customer Support -->
      <div class="feature-card">
        <div class="feature-content">
          <div class="feature-icon">
            <svg fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm-5 2.5c0 .83-.67 1.5-1.5 1.5S12 7.33 12 6.5 12.67 5 13.5 5s1.5.67 1.5 1.5zM16 18H8v-.57c0-.81.48-1.53 1.22-1.85a6.95 6.95 0 015.56 0A2.01 2.01 0 0116 17.43V18z"/>
            </svg>
          </div>
          <h3 class="feature-title">24/7 Customer Support</h3>
          <p class="feature-description">
            Our dedicated support team is always here to help. Get assistance anytime, anywhere with our round-the-clock
            customer service.
          </p>
        </div>
      </div>

      <!-- Feature 3: Secure & Trusted -->
      <div class="feature-card">
        <div class="feature-content">
          <div class="feature-icon">
            <svg fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
            </svg>
          </div>
          <h3 class="feature-title">Secure & Trusted</h3>
          <p class="feature-description">
            Shop with confidence! We use industry-leading security measures and have served over 10,000 satisfied
            customers worldwide.
          </p>
        </div>
      </div>
    </div>

    <div class="stats-section">
      <div class="stats-grid">
        <div class="stat-item">
          <div class="stat-number">10K+</div>
          <div class="stat-label">Happy Customers</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">99.9%</div>
          <div class="stat-label">Uptime</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">&lt; 5min</div>
          <div class="stat-label">Delivery Time</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">24/7</div>
          <div class="stat-label">Support</div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
