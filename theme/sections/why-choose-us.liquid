<section
  class="
    why-choose-us-section py-20 relative overflow-hidden bg-cover bg-center bg-no-repeat
    {% if section.settings.background_style == 'solid' %}bg-slate-900{% endif %}
  "
>
  {% if section.settings.background_style == 'default' %}
    <div class="absolute inset-0 bg-gradient-to-tr from-purple-900/20 via-transparent to-blue-900/20"></div>
    <style>
      .why-choose-us-section {
        background-image: url('{{ "image-okok2.png" | asset_url }}');
      }
    </style>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-black/25 to-black/50"></div>
  {% elsif section.settings.background_style == 'gradient' %}
    <div class="absolute inset-0 bg-gradient-to-br from-primary/10 via-transparent to-secondary/10"></div>
  {% endif %}

  <div class="w-full px-8 md:px-16 lg:px-24 xl:px-32 relative z-10">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
      {{ section.settings.title | default: 'Why Choose BloxMania?' }}
    </h2>

    {% if section.settings.show_subtitle and section.settings.subtitle != blank %}
      <p class="text-lg md:text-xl text-gray-300 text-center mb-16">
        {{ section.settings.subtitle }}
      </p>
    {% endif %}

    <div
      class="
        grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 lg:gap-16
        {% if section.settings.layout == 'grid-3' %}lg:grid-cols-3{% endif %}
        {% if section.settings.layout == 'grid-4' %}lg:grid-cols-4{% endif %}
      "
    >
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'feature' %}
            <div
              class="
                feature-card bg-gradient-to-br p-8 md:p-12 lg:p-16 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 cursor-pointer
                {% case block.settings.color_scheme %}
                  {% when 'yellow-orange' %}from-yellow-600 to-orange-600
                  {% when 'red-pink' %}from-red-600 to-pink-600
                  {% when 'green-teal' %}from-green-600 to-teal-600
                  {% when 'blue-purple' %}from-blue-600 to-purple-600
                  {% when 'purple-pink' %}from-purple-600 to-pink-600
                {% endcase %}
              "
              {{ block.shopify_attributes }}
            >
              {% comment %} Icon based on selection {% endcomment %}
              {% case block.settings.icon %}
                {% when 'lightning' %}
                  <svg
                    class="w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 text-white mb-6 md:mb-8"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  </svg>
                {% when 'shield' %}
                  <svg
                    class="w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 text-white mb-6 md:mb-8"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                {% when 'message' %}
                  <svg
                    class="w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 text-white mb-6 md:mb-8"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                {% when 'star' %}
                  <svg
                    class="w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 text-white mb-6 md:mb-8"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% when 'check' %}
                  <svg
                    class="w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 text-white mb-6 md:mb-8"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                {% when 'clock' %}
                  <svg
                    class="w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 text-white mb-6 md:mb-8"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
              {% endcase %}

              <h3 class="text-lg md:text-xl lg:text-2xl font-bold text-white mb-4 md:mb-6">
                {{ block.settings.title }}
              </h3>
              <p class="text-white/90 leading-relaxed text-base md:text-lg lg:text-xl font-medium">
                {{ block.settings.description }}
              </p>
            </div>
        {% endcase %}
      {% endfor %}

      {% comment %} Fallback content if no blocks {% endcomment %}
      {% if section.blocks.size == 0 %}
        <div class="feature-card bg-gradient-to-br from-yellow-600 to-orange-600 p-8 md:p-12 lg:p-16 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 cursor-pointer">
          <svg
            class="w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 text-white mb-6 md:mb-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <h3 class="text-lg md:text-xl lg:text-2xl font-bold text-white mb-4 md:mb-6">Fast and Reliable</h3>
          <p class="text-white/90 leading-relaxed text-base md:text-lg lg:text-xl font-medium">
            Our automated system ensures your items are delivered almost instantly. Our dedicated team is here to ensure
            your order is delivered as fast as possible.
          </p>
        </div>

        <div class="feature-card bg-gradient-to-br from-red-600 to-pink-600 p-8 md:p-12 lg:p-16 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 cursor-pointer">
          <svg
            class="w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 text-white mb-6 md:mb-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          <h3 class="text-lg md:text-xl lg:text-2xl font-bold text-white mb-4 md:mb-6">Secure Transactions</h3>
          <p class="text-white/90 leading-relaxed text-base md:text-lg lg:text-xl font-medium">
            We use trusted payment systems to keep your data safe and secure.
          </p>
        </div>

        <div class="feature-card bg-gradient-to-br from-green-600 to-teal-600 p-8 md:p-12 lg:p-16 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 cursor-pointer">
          <svg
            class="w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 text-white mb-6 md:mb-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <h3 class="text-lg md:text-xl lg:text-2xl font-bold text-white mb-4 md:mb-6">24/7 Support</h3>
          <p class="text-white/90 leading-relaxed text-base md:text-lg lg:text-xl font-medium">
            Our dedicated support team is always here to help you. If you ever have an issue, join our discord and we
            will assist you right away.
          </p>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Why Choose BloxMania?"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Experience the best gaming marketplace with unmatched quality, speed, and customer service."
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "grid-3",
          "label": "3 Columns"
        },
        {
          "value": "grid-2",
          "label": "2 Columns"
        },
        {
          "value": "grid-4",
          "label": "4 Columns"
        }
      ],
      "default": "grid-3"
    },
    {
      "type": "checkbox",
      "id": "show_subtitle",
      "label": "Show subtitle",
      "default": false
    },
    {
      "type": "select",
      "id": "background_style",
      "label": "Background Style",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "gradient",
          "label": "Gradient"
        },
        {
          "value": "solid",
          "label": "Solid Color"
        }
      ],
      "default": "default"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Feature Description",
          "default": "Feature description goes here"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "lightning",
              "label": "Lightning Bolt"
            },
            {
              "value": "shield",
              "label": "Shield"
            },
            {
              "value": "message",
              "label": "Message Circle"
            },
            {
              "value": "star",
              "label": "Star"
            },
            {
              "value": "check",
              "label": "Check Mark"
            },
            {
              "value": "clock",
              "label": "Clock"
            }
          ],
          "default": "lightning"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "label": "Color Scheme",
          "options": [
            {
              "value": "yellow-orange",
              "label": "Yellow to Orange"
            },
            {
              "value": "red-pink",
              "label": "Red to Pink"
            },
            {
              "value": "green-teal",
              "label": "Green to Teal"
            },
            {
              "value": "blue-purple",
              "label": "Blue to Purple"
            },
            {
              "value": "purple-pink",
              "label": "Purple to Pink"
            }
          ],
          "default": "yellow-orange"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "Fast and Reliable",
            "description": "Our automated system ensures your items are delivered almost instantly. Our dedicated team is here to ensure your order is delivered as fast as possible.",
            "icon": "lightning",
            "color_scheme": "yellow-orange"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Secure Transactions",
            "description": "We use trusted payment systems to keep your data safe and secure.",
            "icon": "shield",
            "color_scheme": "red-pink"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "24/7 Support",
            "description": "Our dedicated support team is always here to help you. If you ever have an issue, join our discord and we will assist you right away.",
            "icon": "message",
            "color_scheme": "green-teal"
          }
        }
      ]
    }
  ]
}
{% endschema %}
