{%- style -%}
  .featured-products {
    padding: 5rem 2rem;
    background: linear-gradient(135deg, rgba(24, 25, 38, 0.9), rgba(35, 36, 58, 0.9)),
                url('{{ 'okok1.png' | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

  .featured-products-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .featured-products-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: #ffffff;
    margin: 0;
  }

  .view-all-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background: transparent;
    color: #ffd800;
    border: 2px solid #ffd800;
    text-decoration: none;
    font-weight: 600;
    border-radius: 50px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .view-all-btn:hover {
    background: #ffd800;
    color: #000;
    transform: translateY(-2px);
    box-shadow: 0 0 20px rgba(255, 216, 0, 0.3);
  }

  .view-all-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 216, 0, 0.2), transparent);
    transition: left 0.5s;
  }

  .view-all-btn:hover::before {
    left: 100%;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .product-card {
    background: linear-gradient(135deg, rgba(35, 36, 58, 0.9), rgba(24, 25, 38, 0.9)),
                url('{{ 'widget-backing.png' | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid transparent;
    position: relative;
    backdrop-filter: blur(10px);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .product-card:hover {
    transform: translateY(-5px) scale(1.02);
    border-color: #ffd800;
    box-shadow: 0 0 30px rgba(255, 216, 0, 0.3), 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 216, 0, 0.1), transparent);
    transition: left 0.5s;
    z-index: 1;
  }

  .product-card:hover::before {
    left: 100%;
  }

  .product-image-container {
    position: relative;
    overflow: hidden;
    height: 200px;
    flex-shrink: 0;
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 12px;
    margin: 1rem;
    width: calc(100% - 2rem);
    height: calc(100% - 2rem);
  }

  .product-card:hover .product-image {
    transform: scale(1.05);
    filter: brightness(1.1);
  }

  .product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 2;
  }

  .product-card:hover .product-overlay {
    opacity: 1;
  }

  .add-to-cart-btn {
    background: #ffd800;
    color: #000;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-shadow: 0 1px 2px rgba(0,0,0,0.3);
    box-shadow: 0 4px 12px rgba(255, 216, 0, 0.3);
  }

  .add-to-cart-btn:hover {
    background: #e6c200;
    transform: scale(1.05) translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 216, 0, 0.5);
  }

  .product-info {
    padding: 1.5rem;
    position: relative;
    z-index: 1;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .product-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #ffffff;
    line-height: 1.4;
    transition: color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-title a:hover {
    color: #ffd800;
  }

  .product-price {
    font-size: 1.25rem;
    font-weight: 700;
    color: #ffd800;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .product-price .compare-price {
    text-decoration: line-through;
    color: #9ca3af;
    margin-right: 0.5rem;
    font-size: 1rem;
    font-weight: 500;
  }

  .product-variants {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .variant-tag {
    background: rgba(255, 216, 0, 0.15);
    color: #ffd800;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    border: 1px solid rgba(255, 216, 0, 0.3);
    backdrop-filter: blur(4px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .variant-tag:hover {
    background: rgba(255, 216, 0, 0.25);
    border-color: rgba(255, 216, 0, 0.5);
  }

  .product-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    color: #d1d5db;
    margin-top: auto;
  }

  .product-rating {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .star {
    color: #ffd800;
    font-size: 0.875rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .product-stock {
    color: #10b981;
    font-weight: 500;
  }

  .product-stock.low {
    color: #f59e0b;
  }

  .product-stock.out {
    color: #ef4444;
  }

  /* Loading skeleton */
  .product-skeleton {
    background: rgba(35, 36, 58, 0.8);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid #333441;
    height: 400px;
  }

  .skeleton-image {
    height: 200px;
    background: linear-gradient(90deg, #333441 25%, #4a4b5a 50%, #333441 75%);
    background-size: 200% 100%;
    animation: loading 1.5s infinite;
  }

  .skeleton-content {
    padding: 1.5rem;
  }

  .skeleton-title {
    height: 1.25rem;
    background: #333441;
    border-radius: 4px;
    margin-bottom: 0.5rem;
    width: 80%;
  }

  .skeleton-price {
    height: 1.5rem;
    background: #333441;
    border-radius: 4px;
    margin-bottom: 1rem;
    width: 60%;
  }

  .skeleton-meta {
    display: flex;
    justify-content: space-between;
    margin-top: 1rem;
  }

  .skeleton-rating,
  .skeleton-stock {
    height: 1rem;
    background: #333441;
    border-radius: 4px;
    width: 30%;
  }

  @keyframes loading {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .featured-products {
      padding: 3rem 1rem;
      background-attachment: scroll;
    }

    .featured-products-header {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .products-grid {
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1rem;
    }

    .product-image-container {
      height: 180px;
    }
  }

  @media (max-width: 480px) {
    .products-grid {
      grid-template-columns: 1fr;
    }

    .product-image-container {
      height: 200px;
    }
  }

  @media (min-width: 1024px) {
    .products-grid {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
  }
{%- endstyle -%}

<section class="featured-products">
  <div class="featured-products-header">
    <h2 class="featured-products-title">Featured Items</h2>
    <a href="{{ section.settings.view_all_link | default: '/collections/all' }}" class="view-all-btn"> View all → </a>
  </div>

  <div class="products-grid">
    {% if section.settings.collection != blank %}
      {% assign products = section.settings.collection.products | slice: 0, section.settings.products_to_show %}
      {% for product in products %}
        <div class="product-card">
          <div class="product-image-container">
            {% if product.featured_image != blank %}
              <img
                src="{{ product.featured_image | image_url: width: 400 }}"
                alt="{{ product.title }}"
                class="product-image"
                width="400"
                height="400"
                loading="lazy"
              >
            {% else %}
              <div
                class="product-image"
                style="background: linear-gradient(135deg, #333441, #4a4b5a); display: flex; align-items: center; justify-content: center; color: #9ca3af; font-weight: 500;"
              >
                No Image Available
              </div>
            {% endif %}

            <div class="product-overlay">
              <form action="/cart/add" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <button type="submit" class="add-to-cart-btn">
                  <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M7.5 6v.75H5.513c-.96 0-1.764.724-1.865 1.679l-1.263 12A1.875 1.875 0 004.25 22.5h15.5a1.875 1.875 0 001.865-2.071l-1.263-12a1.875 1.875 0 00-1.865-1.679H16.5V6a4.5 4.5 0 10-9 0zM12 3a3 3 0 00-3 3v.75h6V6a3 3 0 00-3-3z"/>
                  </svg>
                  Add to Cart
                </button>
              </form>
            </div>
          </div>

          <div class="product-info">
            <div>
              <h3 class="product-title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>

              <div class="product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="compare-price">{{ product.compare_at_price | money }}</span>
                {% endif %}
                {{ product.price | money }}
              </div>

              {% if product.variants.size > 1 %}
                <div class="product-variants">
                  {% for variant in product.variants limit: 3 %}
                    <span class="variant-tag">{{ variant.title }}</span>
                  {% endfor %}
                  {% if product.variants.size > 3 %}
                    <span class="variant-tag">+{{ product.variants.size | minus: 3 }} more</span>
                  {% endif %}
                </div>
              {% endif %}
            </div>

            <div class="product-meta">
              <div class="product-rating">
                <span class="star">★</span>
                <span>4.8</span>
              </div>
              <div class="product-stock {% unless product.available %}out{% endunless %}">
                {% if product.available %}
                  {% if product.inventory_quantity <= 5 and product.inventory_quantity > 0 %}
                    <span class="low">Low Stock</span>
                  {% else %}
                    <span>In Stock</span>
                  {% endif %}
                {% else %}
                  <span>Out of Stock</span>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <!-- Demo Products when no collection is selected -->
      {% assign demo_products = '10T.jpg,DISCO-BEE.jpg,DRAGONFLY.jpg,FENNEC.jpg,RACCOON.jpg' | split: ',' %}
      {% assign demo_names = '10 Trillion Sheckles,Disco Bee,Dragonfly,Fennec Fox,Raccoon' | split: ',' %}
      {% assign demo_prices = '$15.99,$17.99,$12.99,$24.99,$12.99' | split: ',' %}

      {% for i in (1..5) %}
        {% assign index = forloop.index0 %}
        {% assign img_asset = demo_products[index] | default: 'no-image.png' %}
        {% assign prod_name = demo_names[index] | default: 'Featured Gaming Item' %}
        {% assign prod_price = demo_prices[index] | default: '$9.99' %}

        <div class="product-card">
          <div class="product-image-container">
            <img
              src="{{ img_asset | asset_url }}"
              alt="{{ prod_name }}"
              class="product-image"
              width="400"
              height="400"
              loading="lazy"
            >

            <div class="product-overlay">
              <a href="/collections/all" class="add-to-cart-btn">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M7.5 6v.75H5.513c-.96 0-1.764.724-1.865 1.679l-1.263 12A1.875 1.875 0 004.25 22.5h15.5a1.875 1.875 0 001.865-2.071l-1.263-12a1.875 1.875 0 00-1.865-1.679H16.5V6a4.5 4.5 0 10-9 0zM12 3a3 3 0 00-3 3v.75h6V6a3 3 0 00-3-3z"/>
                </svg>
                Shop Now
              </a>
            </div>
          </div>

          <div class="product-info">
            <div>
              <h3 class="product-title">
                <a href="/collections/all">{{ prod_name }}</a>
              </h3>

              <div class="product-price">{{ prod_price }}</div>

              <div class="product-variants">
                <span class="variant-tag">Instant</span>
                <span class="variant-tag">Digital</span>
              </div>
            </div>

            <div class="product-meta">
              <div class="product-rating">
                <span class="star">★</span>
                <span>4.8</span>
              </div>
              <div class="product-stock">
                <span>In Stock</span>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 1,
      "default": 5,
      "label": "Number of products to show"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
