                  loading="lazy"
                >
              </div>
              <div class="group">
                <img
                  src="{{ 'SypherPK.png' | asset_url }}"
                  alt="SypherPK"
                  class="w-16 h-16 md:w-20 md:h-20 rounded-full border-2 border-primary/50 group-hover:border-primary transition-all duration-300 group-hover:scale-110 shadow-lg"
                  width="80"
                  height="80"
                  loading="lazy"
                >
              </div>
              <div class="group">
                <img
                  src="{{ 'TypicalGamer.png' | asset_url }}"
                  alt="TypicalGamer"
                  class="w-16 h-16 md:w-20 md:h-20 rounded-full border-2 border-primary/50 group-hover:border-primary transition-all duration-300 group-hover:scale-110 shadow-lg"
                  width="80"
                  height="80"
                  loading="lazy"
                >
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

