<section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background with proper overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/30 to-black/50"></div>

  <!-- Main content container -->
  <div class="relative z-10 w-full max-w-5xl mx-auto px-6 py-16">
    <div class="text-center">
      <!-- Rating Badge -->
      <div class="flex justify-center mb-8">
        {% render 'responsive-image',
          image: 'image-ratingz.png',
          alt: '5-Star Rating',
          class: 'h-10 w-auto',
          width: 100,
          height: 35,
          loading: 'eager',
          sizes: '100px'
        %}
      </div>

      <!-- Main Title -->
      <h1 class="hero-main-title mb-6">
        <span class="hero-title-primary">Instantly Buy Your Favorite Items</span>
        <span class="hero-title-accent">Fast, Safe, and Easy!</span>
      </h1>

      <!-- Subtitle -->
      <p class="hero-description mb-10">
        {% if section.settings.subtitle != blank %}
          {{
            section.settings.subtitle
            | replace: 'automated system', '<strong class="text-primary font-semibold">automated system</strong>'
          }}
        {% else %}
          BloxMania is the fastest, cheapest, and safest shop for digital goods, with instant delivery. Our
          <strong class="text-primary font-semibold">automated system</strong> ensures you receive your items securely
          and swiftly!
        {% endif %}
      </p>

      <!-- CTA Button -->
      <div class="hero-cta mb-16">
        <a
          href="{{ section.settings.cta_link | default: '/collections/all' }}"
          class="hero-button"
          aria-label="Shop gaming items now"
        >
          <span>{{ section.settings.cta_text | default: 'SHOP NOW' }}</span>
          <svg class="hero-button-icon" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </a>
      </div>

      <!-- Trusted by Top Creators Section -->
      <div class="hero-trusted">
        <h2 class="hero-trusted-title mb-3">Trusted by Top Creators</h2>
        <p class="hero-trusted-subtitle mb-8">Join thousands of satisfied customers who trust BloxMania</p>

        <!-- Creators Carousel -->
        <div>
          {% render 'creators-carousel' %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero section background */
  .hero-section {
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.5)),
      url('{{ "image-hero.png" | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  /* Main title - Modern typography */
  .hero-main-title {
    font-family: system-ui, -apple-system, sans-serif;
    line-height: 1.1;
    color: white;
  }

  .hero-title-primary {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-title-accent {
    display: block;
    font-size: 3rem;
    font-weight: 800;
    color: rgb(255, 216, 0);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  /* Description text - Moved to main stylesheet for better specificity */

  /* CTA Button */
  .hero-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: black;
    background: rgb(255, 216, 0);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .hero-button:hover {
    background: rgb(251, 191, 36);
    transform: translateY(-1px);
  }

  .hero-button-icon {
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
  }

  /* Trusted section */
  .hero-trusted {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
  }

  .hero-trusted-title {
    font-size: 1.75rem;
    font-weight: 600;
    color: white;
    line-height: 1.3;
  }

  .hero-trusted-subtitle {
    font-size: 1rem;
    line-height: 1.5;
    color: rgb(156, 163, 175);
    font-weight: 400;
  }

  /* Responsive design */
  @media (min-width: 640px) {
    .hero-title-primary {
      font-size: 3rem;
    }

    .hero-title-accent {
      font-size: 3.5rem;
    }

    /* Hero description styles moved to main stylesheet */

    .hero-button {
      padding: 0.875rem 2rem;
      font-size: 1.125rem;
    }

    .hero-trusted-title {
      font-size: 2rem;
    }

    .hero-trusted-subtitle {
      font-size: 1.125rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-title-primary {
      font-size: 3.5rem;
    }

    .hero-title-accent {
      font-size: 4rem;
    }

    /* Hero description styles moved to main stylesheet */

    .hero-button {
      padding: 1rem 2.5rem;
      font-size: 1.25rem;
    }

    .hero-trusted-title {
      font-size: 2.25rem;
    }

    .hero-trusted-subtitle {
      font-size: 1.25rem;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "title_part1",
      "label": "Hero Title Part 1",
      "default": "Instantly Buy Your Favorite Items"
    },
    {
      "type": "text",
      "id": "title_part2",
      "label": "Hero Title Part 2 (Yellow)",
      "default": "Fast, Safe, and Easy!"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Hero Subtitle",
      "default": "BloxMania is the fastest, cheapest, and safest shop for digital goods, with instant delivery. Our automated system ensures you receive your items securely and swiftly!"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
