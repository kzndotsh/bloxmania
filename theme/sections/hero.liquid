{%- style -%}
  /* Custom styles that can't be easily replicated with Tailwind */
  .hero-section {
    background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('{{ 'hero.png' | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero-title-gradient {
    color: #ffd800;
  }

  .creators-carousel {
    animation: scroll 30s linear infinite;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .creators-carousel:hover {
    animation-play-state: paused;
  }

  /* Circular creator images */
  .creator-circle {
    width: 64px;
    height: 64px;
    display: block;
    transition: all 0.3s ease;
  }

  .creator-circle:hover {
    transform: scale(1.1);
  }

  .creator-circle img {
    width: 100%;
    height: 100%;
    display: block;
  }

  @media (min-width: 768px) {
    .creator-circle {
      width: 80px !important;
      height: 80px !important;
    }
  }

  /* Fade mask for smooth scroll effect */
  .creators-container {
    mask: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
    -webkit-mask: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
  }
{%- endstyle -%}

