{%- style -%}
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(24, 25, 38, 0.9), rgba(35, 36, 58, 0.9)),
                {% if section.settings.background_image != blank %}
                  url('{{ section.settings.background_image | image_url: width: 1920 }}')
                {% else %}
                  url('{{ 'slam.png' | asset_url }}')
                {% endif %};
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    position: relative;
    overflow: hidden;
    padding-top: 80px;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 50%, rgba(255, 216, 0, 0.1) 0%, transparent 70%);
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }

  .hero-content {
    text-align: center;
    max-width: 80rem;
    padding: 2rem;
    position: relative;
    z-index: 2;
  }

  .hero-rating {
    margin-bottom: 1.5rem;
  }

  .hero-rating img {
    height: 3rem;
    transition: all 0.3s ease;
    transform: scale(1.1);
    filter: drop-shadow(0 0 10px rgba(255, 216, 0, 0.5));
    cursor: pointer;
  }

  .hero-rating img:hover {
    transform: scale(1.25);
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 900;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    color: #ffffff;
  }

  .hero-title-gradient {
    background: linear-gradient(135deg, #a855f7, #ec4899, #ef4444);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    animation: gradient-shift 3s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #d1d5db;
    margin-bottom: 2rem;
    max-width: 37.5rem;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .hero-subtitle strong {
    color: #ffd800;
    font-weight: 600;
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 3rem;
    background: #ffd800;
    color: #000;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.125rem;
    border-radius: 50px;
    box-shadow: 0 0 20px rgba(255, 216, 0, 0.3);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    text-shadow: 0 1px 2px rgba(0,0,0,0.3);
  }

  .hero-cta:hover {
    background: #e6c200;
    transform: translateY(-2px);
    box-shadow: 0 0 30px rgba(255, 216, 0, 0.5);
    color: #000;
  }

  .hero-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .hero-cta:hover::before {
    left: 100%;
  }

  /* Creators Section */
  .creators-section {
    margin-top: 4rem;
  }

  .creators-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: #ffffff;
  }

  .creators-title span {
    color: #ffd800;
  }

  .creators-reel {
    position: relative;
    overflow: hidden;
    margin: 0 auto;
    max-width: 62.5rem;
    mask: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
    -webkit-mask: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
  }

  .creators-scroll {
    display: flex;
    animation: scroll 30s linear infinite;
    gap: 3rem;
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .creator-item {
    flex-shrink: 0;
    text-align: center;
    min-width: 7.5rem;
  }

  .creator-avatar {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
    margin: 0 auto 0.5rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .creator-avatar:hover {
    transform: scale(1.1);
  }

  .creator-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 0.25rem;
    white-space: nowrap;
  }

  .creator-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: #ffffff;
  }

  .youtube-icon {
    width: 0.75rem;
    height: 0.75rem;
    fill: currentColor;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-section {
      padding-top: 60px;
      background-attachment: scroll;
    }

    .hero-content {
      padding: 1rem;
    }

    .hero-rating img {
      height: 2.5rem;
    }

    .creators-reel {
      max-width: 100%;
    }

    .creator-item {
      min-width: 6.25rem;
    }

    .creator-avatar {
      width: 3.75rem;
      height: 3.75rem;
    }
  }

  /* Pause animation on hover */
  .creators-reel:hover .creators-scroll {
    animation-play-state: paused;
  }
{%- endstyle -%}

<section class="hero-section">
  <div class="hero-content">
    <!-- Rating Badge -->
    <div class="hero-rating">
      <img src="{{ 'ratingz.png' | asset_url }}" alt="5-Star Rating" width="120" height="20" loading="lazy">
    </div>

    <!-- Main Title -->
    <h1 class="hero-title">
      {{ section.settings.title_part1 | default: 'Instantly Buy Your Favorite Items - Fast,' }}
      <span class="hero-title-gradient">
        {{ section.settings.title_part2 | default: 'Safe, and Easy!' }}
