          {% endfor %}

          <!-- Duplicate set for seamless loop -->
          {% for creator in creators %}
            {% assign creator_data = creator | split: ',' %}
            <div class="creator-item">
              <a href="{{ creator_data[2] }}" target="_blank" rel="noopener">
                <img
                  src="{{ creator_data[0] | append: '.png' | asset_url }}"
