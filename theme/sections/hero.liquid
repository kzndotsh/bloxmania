{%- style -%}
  /* Custom styles that can't be easily replicated with Tailwind */
  .hero-section {
    background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('{{ 'hero.png' | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero-title-gradient {
    color: #ffd800;
  }

  .creators-carousel {
    animation: scroll 30s linear infinite;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .creators-carousel:hover {
    animation-play-state: paused;
  }

  @media (min-width: 768px) {
    .creator-circle {
      width: 80px !important;
      height: 80px !important;
    }
  }

  /* Fade mask for smooth scroll effect */
  .creators-container {
    mask: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
    -webkit-mask: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
  }
{%- endstyle -%}

<section class="hero-section min-h-screen flex items-center justify-center relative overflow-hidden py-32 px-8 md:px-4">
  <div class="text-center max-w-6xl mx-auto relative z-10">
    <!-- Rating Badge -->
    <div class="flex justify-center mb-8">
      <img
        src="{{ 'ratingz.png' | asset_url }}"
        alt="5-Star Rating"
        class="h-12 w-auto transition-transform duration-300 hover:scale-110 drop-shadow-lg"
        width="120"
        height="40"
        loading="lazy"
        class="w-full h-full object-cover rounded-lg"
      >
    </div>

    <!-- Main Title -->
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6 leading-tight text-white drop-shadow-lg">
      Instantly Buy Your Favorite Items
      <br>
      <span class="hero-title-gradient">Fast, Safe, and Easy!</span>
    </h1>

    <!-- Subtitle -->
    <p class="text-lg md:text-xl lg:text-2xl text-gray-300 mb-10 max-w-4xl mx-auto leading-relaxed drop-shadow-md">
      {% if section.settings.subtitle != blank %}
        {{ section.settings.subtitle }}
      {% else %}
        BloxMania is the fastest, cheapest, and safest shop for digital goods, with instant delivery. Our
        <strong class="text-primary">automated system</strong> ensures you receive your items securely and swiftly!
      {% endif %}
    </p>

    <!-- Call to Action -->
    <a
      href="{{ section.settings.cta_link | default: '/collections/all' }}"
      class="inline-flex items-center justify-center px-8 py-4 bg-primary text-black font-semibold text-lg rounded-full shadow-lg hover:bg-primary-600 hover:-translate-y-1 hover:shadow-xl transition-all duration-300 mb-12"
    >
      {{ section.settings.cta_text | default: 'SHOP NOW' }}
    </a>

    <!-- Trusted by Top Creators Section -->
    <div class="mt-8">
      <div class="text-center mb-6">
        <h3 class="text-xl md:text-2xl font-bold text-white mb-2 drop-shadow-md">Trusted by Top Creators</h3>
        <p class="text-gray-300 text-sm md:text-base drop-shadow-sm">
          Join thousands of satisfied customers who trust BloxMania
        </p>
      </div>

      <!-- Creators Carousel -->
      {% render 'creators-carousel' %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "title_part1",
      "label": "Hero Title Part 1",
      "default": "Instantly Buy Your Favorite Items"
    },
    {
      "type": "text",
      "id": "title_part2",
      "label": "Hero Title Part 2 (Yellow)",
      "default": "Fast, Safe, and Easy!"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Hero Subtitle",
      "default": "<p>BloxMania is the fastest, cheapest, and safest shop for digital goods, with instant delivery. Our <strong>automated system</strong> ensures you receive your items securely and swiftly!</p>"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
