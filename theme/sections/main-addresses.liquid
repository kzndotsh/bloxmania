          placeholder="{{ 'customer.addresses.last_name' | t }}"
        >
        <label for="AddressLastNameNew" class="field__label">
          {{ 'customer.addresses.last_name' | t }}
        </label>
      </div>

      <div class="field">
        <input
          type="text"
          id="AddressCompanyNew"
          name="address[company]"
          value="{{ form.company }}"
          autocomplete="organization"
          class="field__input"
          placeholder="{{ 'customer.addresses.company' | t }}"
        >
        <label for="AddressCompanyNew" class="field__label">
          {{ 'customer.addresses.company' | t }}
        </label>
      </div>

      <div class="field">
        <input
          type="text"
          id="AddressAddress1New"
          name="address[address1]"
          value="{{ form.address1 }}"
          autocomplete="address-line1"
          class="field__input"
          placeholder="{{ 'customer.addresses.address1' | t }}"
        >
        <label for="AddressAddress1New" class="field__label">
          {{ 'customer.addresses.address1' | t }}
        </label>
      </div>

      <div class="field">
        <input
          type="text"
          id="AddressAddress2New"
          name="address[address2]"
          value="{{ form.address2 }}"
          autocomplete="address-line2"
          class="field__input"
          placeholder="{{ 'customer.addresses.address2' | t }}"
        >
        <label for="AddressAddress2New" class="field__label">
          {{ 'customer.addresses.address2' | t }}
        </label>
      </div>

      <div class="field">
        <input
          type="text"
          id="AddressCityNew"
          name="address[city]"
          value="{{ form.city }}"
          autocomplete="address-level2"
          class="field__input"
          placeholder="{{ 'customer.addresses.city' | t }}"
        >
        <label for="AddressCityNew" class="field__label">
          {{ 'customer.addresses.city' | t }}
        </label>
      </div>

      <div class="field">
        <select
          id="AddressCountryNew"
          name="address[country]"
          class="field__input"
          autocomplete="country"
          data-default="{{ form.country }}"
        >
          {{ all_country_option_tags }}
        </select>
        <label for="AddressCountryNew" class="field__label">
          {{ 'customer.addresses.country' | t }}
        </label>
      </div>

      <div class="field" id="AddressProvinceContainerNew" class="province-container province-container--hidden">
        <select
          id="AddressProvinceNew"
          name="address[province]"
          class="field__input"
          autocomplete="address-level1"
          data-default="{{ form.province }}"
        ></select>
        <label for="AddressProvinceNew" class="field__label">
          {{ 'customer.addresses.province' | t }}
        </label>
      </div>

      <div class="field">
        <input
          type="text"
          id="AddressZipNew"
          name="address[zip]"
          value="{{ form.zip }}"
          autocomplete="postal-code"
          class="field__input"
          placeholder="{{ 'customer.addresses.zip' | t }}"
        >
        <label for="AddressZipNew" class="field__label">
          {{ 'customer.addresses.zip' | t }}
        </label>
      </div>

      <div class="field">
        <input
          type="tel"
          id="AddressPhoneNew"
          name="address[phone]"
          value="{{ form.phone }}"
          autocomplete="tel"
          class="field__input"
          placeholder="{{ 'customer.addresses.phone' | t }}"
        >
        <label for="AddressPhoneNew" class="field__label">
          {{ 'customer.addresses.phone' | t }}
        </label>
      </div>

      <div class="address-form__actions">
        <button type="submit" class="button">
          {{ 'customer.addresses.add' | t }}
        </button>
        <button type="button" class="button button--secondary address-form__cancel">
          {{ 'customer.addresses.cancel' | t }}
        </button>
      </div>
    {% endform %}
  </div>
</div>

