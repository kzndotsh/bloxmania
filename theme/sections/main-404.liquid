<div class="template-404 page-width page-margin">
  <div class="error-code">404</div>

  <h1 class="title">
    {{ 'templates.404.title' | t }}
  </h1>

  <p>
    {{ 'templates.404.subtext' | t }}
  </p>

  <!-- Search form for better user experience -->
  {% render 'search-form', class: 'template-404__search-form', id: 'Search-404' %}

  <!-- Helpful navigation links -->
  <div class="helpful-links">
    <h2>{{ 'templates.404.helpful_links' | t | default: 'Helpful Links' }}</h2>
    <ul>
      <li>
        <a href="{{ routes.root_url }}">{{ 'general.404.link_home' | t | default: 'Home' }}</a>
      </li>
      <li>
        <a href="{{ routes.all_products_collection_url }}">
          {{- 'general.404.link_products' | t | default: 'All Products' -}}
        </a>
      </li>
      {%- if blog.handles.size > 0 -%}
        <li>
          <a href="/blogs/{{ blog.handles.first }}">{{ 'general.404.link_blog' | t | default: 'Blog' }}</a>
        </li>
      {%- endif -%}
      <li>
        <a href="{{ routes.search_url }}">{{ 'general.404.link_search' | t | default: 'Search' }}</a>
      </li>
    </ul>
  </div>

  <!-- Primary CTA button -->
  <a href="{{ routes.all_products_collection_url }}" class="button cta-button">
    {{ 'general.continue_shopping' | t }}
  </a>
</div>

{% schema %}
{
  "name": "t:sections.main-404.name",
  "tag": "section",
  "class": "section"
}
{% endschema %}
