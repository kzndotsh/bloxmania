<footer class="relative overflow-hidden bg-gradient-to-br from-slate-900/70 to-indigo-900/25 py-16 px-8" role="contentinfo">
  <div 
    class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-[0.03] z-0"
    style="background-image: url('{{ 'image-slam.png' | asset_url }}');"
  ></div>
  <div class="relative z-10 max-w-6xl mx-auto">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
      <!-- Brand Section -->
      <div class="text-center md:text-left">
        <h3 class="text-2xl font-bold text-white mb-4"><span class="text-primary">Blox</span>Mania</h3>
        <p class="text-gray-300 leading-relaxed mb-6 max-w-sm">
          {{
            section.settings.company_description
            | default: 'The fastest, safest, and most reliable marketplace for digital gaming items.'
          }}
        </p>

        <!-- Social Links -->
        <div class="flex justify-center md:justify-start space-x-3" role="list" aria-label="Social media links">
          {% if section.settings.discord_url != blank %}
            <a
              href="{{ section.settings.discord_url }}"
              class="inline-flex items-center justify-center w-10 h-10 bg-white/5 border border-white/10 rounded-full text-gray-400 no-underline transition-all duration-300 backdrop-blur-sm hover:bg-primary/10 hover:text-primary hover:-translate-y-0.5 hover:shadow-lg hover:shadow-primary/20"
              target="_blank"
              rel="noopener"
              aria-label="Discord"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
              </svg>
            </a>
          {% endif %}

          {% if section.settings.twitter_url != blank %}
            <a
              href="{{ section.settings.twitter_url }}"
              class="inline-flex items-center justify-center w-10 h-10 bg-white/5 border border-white/10 rounded-full text-gray-400 no-underline transition-all duration-300 backdrop-blur-sm hover:bg-primary/10 hover:text-primary hover:-translate-y-0.5 hover:shadow-lg hover:shadow-primary/20"
              target="_blank"
              rel="noopener"
              aria-label="Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          {% endif %}

          {% if section.settings.youtube_url != blank %}
            <a
              href="{{ section.settings.youtube_url }}"
              class="inline-flex items-center justify-center w-10 h-10 bg-white/5 border border-white/10 rounded-full text-gray-400 no-underline transition-all duration-300 backdrop-blur-sm hover:bg-primary/10 hover:text-primary hover:-translate-y-0.5 hover:shadow-lg hover:shadow-primary/20"
              target="_blank"
              rel="noopener"
              aria-label="YouTube"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Empty column for gap -->
      <div class="hidden md:block"></div>

      <!-- Quick Links -->
      <nav class="text-center md:text-left" role="navigation" aria-labelledby="quick-links-heading">
        <h4 id="quick-links-heading" class="text-lg font-semibold text-white mb-4">Quick Links</h4>
        <ul class="space-y-3" role="list">
          <li>
            <a href="{{ routes.all_products_collection_url }}" class="text-gray-400 no-underline font-medium transition-all duration-300 hover:text-primary hover:-translate-y-0.5"> Shop All Items </a>
          </li>
          <li>
            <a href="{{ pages.guarantee.url | default: '/pages/guarantee' }}" class="text-gray-400 no-underline font-medium transition-all duration-300 hover:text-primary hover:-translate-y-0.5"> Our Guarantee </a>
          </li>
          <li>
            <a href="{{ pages.faq.url | default: '/pages/faq' }}" class="text-gray-400 no-underline font-medium transition-all duration-300 hover:text-primary hover:-translate-y-0.5"> FAQ </a>
          </li>
          <li>
            <a href="https://discord.gg/bloxmania" class="text-gray-400 no-underline font-medium transition-all duration-300 hover:text-primary hover:-translate-y-0.5" target="_blank" rel="noopener"> Support </a>
          </li>
        </ul>
      </nav>

      <!-- Legal -->
      <nav class="text-center md:text-left" role="navigation" aria-labelledby="legal-links-heading">
        <h4 id="legal-links-heading" class="text-lg font-semibold text-white mb-4">Legal</h4>
        <ul class="space-y-3" role="list">
          <li>
            <a href="{{ pages['privacy-policy'].url | default: '/pages/privacy-policy' }}" class="text-gray-400 no-underline font-medium transition-all duration-300 hover:text-primary hover:-translate-y-0.5">
              Privacy Policy
            </a>
          </li>
          <li>
            <a href="{{ pages['terms-of-service'].url | default: '/pages/terms-of-service' }}" class="text-gray-400 no-underline font-medium transition-all duration-300 hover:text-primary hover:-translate-y-0.5">
              Terms of Service
            </a>
          </li>
          <li>
            <a href="{{ pages['refund-policy'].url | default: '/pages/refund-policy' }}" class="text-gray-400 no-underline font-medium transition-all duration-300 hover:text-primary hover:-translate-y-0.5">
              Refund Policy
            </a>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Divider -->
    <div class="h-px bg-gradient-to-r from-transparent via-primary/30 to-transparent my-8"></div>

    <!-- Bottom Section -->
    <div class="border-t border-white/10 bg-black/20 backdrop-blur-sm -mx-8 px-8 py-6 mt-8">
      <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center text-center md:text-left gap-4">
        <p class="text-gray-400 text-sm">© {{ 'now' | date: '%Y' }} BloxMania. All rights reserved.</p>
        <p class="text-gray-400 text-sm">Made with <span class="text-red-500">❤️</span> for the gaming community</p>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Company Description",
      "default": "The fastest, safest, and most reliable marketplace for digital gaming items."
    },
    {
      "type": "text",
      "id": "discord_url",
      "label": "Discord URL",
      "default": "https://discord.gg/bloxmania"
    },
    {
      "type": "text",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "text",
      "id": "twitter_url",
      "label": "Twitter URL"
    }
  ]
}
{% endschema %}
