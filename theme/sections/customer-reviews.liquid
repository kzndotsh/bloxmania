{%- style -%}
  .customer-reviews {
    padding: 5rem 2rem;
    background: rgba(35, 36, 58, 0.9);
    text-align: center;
  }

  .reviews-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 700;
    color: #4285f4;
    margin-bottom: 1rem;
  }

  .reviews-subtitle {
    font-size: 1.25rem;
    color: #ffffff;
    margin-bottom: 3rem;
  }

  .reviews-subtitle span {
    color: #4285f4;
    font-weight: 600;
  }

  .overall-rating {
    background: rgba(24, 25, 38, 0.8);
    border: 2px solid #333441;
    border-radius: 16px;
    padding: 2rem;
    margin: 0 auto 3rem;
    max-width: 400px;
    transition: all 0.3s ease;
  }

  .overall-rating:hover {
    border-color: #4285f4;
    box-shadow: 0 0 30px rgba(66, 133, 244, 0.2);
    transform: translateY(-2px);
  }

  .rating-score {
    font-size: 3rem;
    font-weight: 900;
    color: #ffd800;
    margin-bottom: 0.5rem;
  }

  .rating-stars {
    display: flex;
    justify-content: center;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }

  .star {
    color: #ffd800;
    font-size: 1.5rem;
  }

  .rating-text {
    color: #9ca3af;
    font-size: 0.875rem;
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .review-card {
    background: rgba(24, 25, 38, 0.8);
    border: 1px solid #333441;
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    text-align: left;
  }

  .review-card:hover {
    border-color: #ffd800;
    box-shadow: 0 0 20px rgba(255, 216, 0, 0.2);
    transform: translateY(-2px);
  }

  .review-stars {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1rem;
  }

  .review-stars .star {
    color: #ffd800;
    font-size: 1rem;
  }

  .review-text {
    color: #ffffff;
    line-height: 1.6;
    margin-bottom: 1rem;
    font-style: italic;
  }

  .review-author {
    color: #9ca3af;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .review-platform {
    color: #4285f4;
    font-size: 0.75rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .reviews-grid {
      grid-template-columns: 1fr;
    }

    .customer-reviews {
      padding: 3rem 1rem;
    }
  }
{%- endstyle -%}

