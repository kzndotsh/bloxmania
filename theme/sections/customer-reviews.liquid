{%- style -%}
  .customer-reviews {
    padding: 4rem 2rem;
    background: rgba(29, 30, 38, 0.95);
  }

  .reviews-container {
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
  }

  .reviews-header {
    margin-bottom: 3rem;
  }

  .reviews-title {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 0.5rem;
  }

  .reviews-title span {
    color: #ffd800;
  }

  .reviews-subtitle {
    font-size: 1rem;
    color: #d1d5db;
    margin-bottom: 1.5rem;
  }

  .reviews-rating-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .rating-image {
    height: 2.5rem;
    width: auto;
  }

  .rating-stats {
    color: #9ca3af;
    font-size: 0.875rem;
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .review-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 0.5rem;
    padding: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    text-align: left;
    transition: all 0.2s ease;
  }

  .review-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 216, 0, 0.3);
  }

  .review-stars {
    display: flex;
    gap: 0.125rem;
    margin-bottom: 1rem;
  }

  .review-stars .star {
    color: #ffd800;
    font-size: 1rem;
  }

  .review-text {
    color: #ffffff;
    line-height: 1.5;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .review-author-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .review-author {
    color: #ffd800;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .review-platform {
    color: #10b981;
    font-size: 0.7rem;
    font-weight: 400;
    background: rgba(16, 185, 129, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }

  .reviews-cta {
    margin-top: 2rem;
  }

  .reviews-cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: #ffd800;
    color: #000;
    text-decoration: none;
    font-weight: 500;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    font-size: 0.9rem;
  }

  .reviews-cta-btn:hover {
    background: #e6c200;
    transform: translateY(-1px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .customer-reviews {
      padding: 3rem 1rem;
    }

    .reviews-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .review-card {
      padding: 1.25rem;
    }

    .review-author-info {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
{%- endstyle -%}

