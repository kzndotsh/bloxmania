{%- style -%}
  /* Keep only essential hover effects */
  .review-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 216, 0, 0.3);
  }
{%- endstyle -%}

<section class="py-16 px-8 bg-background/95">
  <div class="max-w-5xl mx-auto text-center">
    <div class="mb-12">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-semibold text-white mb-2">
        Customer <span class="text-primary">Reviews</span>
      </h2>
      <p class="text-lg md:text-xl text-gray-300 mb-6">
        {{ section.settings.subtitle | default: 'Trusted by over 10,000 Happy Customers' }}
      </p>

      <div class="flex justify-center items-center gap-4 mb-2">
        <img
          src="{{ 'ratingz.png' | asset_url }}"
          alt="5 Star Rating"
          class="h-10 w-auto"
          width="120"
          height="48"
          loading="lazy"
        >
      </div>
      <p class="text-gray-400">Based on 2,000+ reviews</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mt-8">
      <div class="review-card bg-white/5 rounded-lg p-6 border border-white/10 text-left transition-all duration-200">
        <div class="flex gap-1 mb-4">
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
        </div>
        <p class="text-white leading-relaxed mb-4">"Great seller communication! Just as described. Perfect!"</p>
        <div class="flex justify-between items-center">
          <span class="text-primary text-sm font-medium">Customer</span>
          <span class="text-green-400 text-xs font-normal bg-green-400/10 px-2 py-1 rounded">Past 6 months</span>
        </div>
      </div>

      <div class="review-card bg-white/5 rounded-lg p-6 border border-white/10 text-left transition-all duration-200">
        <div class="flex gap-1 mb-4">
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
        </div>
        <p class="text-white leading-relaxed mb-4">
          "Trustworthy Seller! I had zero problems receiving exactly what I paid for."
        </p>
        <div class="flex justify-between items-center">
          <span class="text-primary text-sm font-medium">Customer</span>
          <span class="text-green-400 text-xs font-normal bg-green-400/10 px-2 py-1 rounded">Past year</span>
        </div>
      </div>

      <div class="review-card bg-white/5 rounded-lg p-6 border border-white/10 text-left transition-all duration-200">
        <div class="flex gap-1 mb-4">
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
        </div>
        <p class="text-white leading-relaxed mb-4">
          "Delivery was rapid, lovely seller and the items were as described."
        </p>
        <div class="flex justify-between items-center">
          <span class="text-primary text-sm font-medium">Customer</span>
          <span class="text-green-400 text-xs font-normal bg-green-400/10 px-2 py-1 rounded">Past month</span>
        </div>
      </div>

      <div class="review-card bg-white/5 rounded-lg p-6 border border-white/10 text-left transition-all duration-200">
        <div class="flex gap-1 mb-4">
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
          <span class="text-primary text-lg">★</span>
        </div>
        <p class="text-white leading-relaxed mb-4">
          "really good and trustworthy! totally worth it! great communication"
        </p>
        <div class="flex justify-between items-center">
          <span class="text-primary text-sm font-medium">Customer</span>
          <span class="text-green-400 text-xs font-normal bg-green-400/10 px-2 py-1 rounded">Past 6 months</span>
        </div>
      </div>
    </div>

    <div class="mt-8">
      <a
        href="{{ section.settings.cta_link | default: '/collections/all' }}"
        class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-black no-underline font-medium rounded-md transition-all duration-200 hover:bg-primary-600 hover:-translate-y-1"
      >
        Start Shopping Now
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Customer Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Customer Reviews & Ratings"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Trusted by over 10,000 Happy Customers"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "Customer Reviews"
    }
  ]
}
{% endschema %}
