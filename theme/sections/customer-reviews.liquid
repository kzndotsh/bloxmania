{%- style -%}
  .customer-reviews {
    padding: 5rem 2rem;
    background: rgba(29, 30, 38, 0.95);
  }

  .reviews-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .reviews-header {
    margin-bottom: 4rem;
  }

  .reviews-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .reviews-title span {
    color: #ffd800;
  }

  .reviews-subtitle {
    font-size: 1.25rem;
    color: #d1d5db;
    margin-bottom: 2rem;
  }

  .reviews-rating-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .rating-image {
    height: 3rem;
    width: auto;
    transition: all 0.3s ease;
  }

  .rating-image:hover {
    transform: scale(1.05);
  }

  .rating-stats {
    color: #9ca3af;
    font-size: 0.875rem;
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .review-card {
    background: url('{{ 'widget-backing.png' | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid transparent;
    position: relative;
    overflow: hidden;
    text-align: left;
    box-shadow: 0 0 20px rgba(255, 216, 0, 0.2);
  }

  .review-card:hover {
    transform: translateY(-5px) scale(1.02);
    border-color: #ffd800;
    box-shadow: 0 0 30px rgba(255, 216, 0, 0.4), 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .review-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 216, 0, 0.1), transparent);
    transition: left 0.5s;
    z-index: 1;
  }

  .review-card:hover::before {
    left: 100%;
  }

  .review-content {
    position: relative;
    z-index: 2;
  }

  .review-stars {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1rem;
  }

  .review-stars .star {
    color: #ffd800;
    font-size: 1.25rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .review-text {
    color: #ffffff;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-style: italic;
    font-size: 1rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .review-author-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }

  .review-author {
    color: #ffd800;
    font-size: 0.875rem;
    font-weight: 600;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .review-platform {
    color: #10b981;
    font-size: 0.75rem;
    font-weight: 500;
    background: rgba(16, 185, 129, 0.15);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    border: 1px solid rgba(16, 185, 129, 0.3);
  }

  .reviews-cta {
    margin-top: 3rem;
  }

  .reviews-cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #ffd800, #e6c200);
    color: #000;
    text-decoration: none;
    font-weight: 600;
    border-radius: 50px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 12px rgba(255, 216, 0, 0.3);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .reviews-cta-btn:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 6px 20px rgba(255, 216, 0, 0.5);
    background: linear-gradient(135deg, #e6c200, #d4ac00);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .customer-reviews {
      padding: 3rem 1rem;
    }

    .reviews-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .reviews-rating-container {
      flex-direction: column;
      gap: 0.5rem;
    }

    .rating-image {
      height: 2.5rem;
    }
  }

  @media (max-width: 480px) {
    .review-card {
      padding: 1.5rem;
    }

    .review-author-info {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }

  @media (min-width: 1024px) {
    .reviews-grid {
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    }
  }
{%- endstyle -%}

